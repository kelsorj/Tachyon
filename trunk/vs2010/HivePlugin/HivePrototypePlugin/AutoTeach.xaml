<UserControl x:Class="BioNex.HivePrototypePlugin.AutoTeach"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="3" />
        </Style>
        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="Margin" Value="3" />
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <!-- help text -->
            <RowDefinition Height="Auto"/>
            <!-- properties -->
            <RowDefinition />
            <!-- auto teach button -->
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" TextWrapping="Wrap">You can teach one or more "panels" of shelves simultaneously by multi-selecting them below.  Cart docks are equivalent to shelf panels.</TextBlock>
        <GroupBox Header="Shelf panels" Grid.Row="1" Grid.Column="0" BorderBrush="Orange">
            <DockPanel>
                <UniformGrid Columns="1" DockPanel.Dock="Bottom">
                    <Button Command="{Binding NewPanelCommand}">New Panel</Button>
                    <Button Command="{Binding DeletePanelCommand}">Delete Panel</Button>
                </UniformGrid>
                <ListBox ItemsSource="{Binding PanelView}" DockPanel.Dock="Top"/>
            </DockPanel>
        </GroupBox>
        <GroupBox Header="Panel Properties" Grid.Row="1" Grid.Column="1" BorderBrush="Orange">
            <DataGrid ItemsSource="{Binding PanelPropertiesGrid}" AutoGenerateColumns="False" SelectionChanged="DataGrid_SelectionChanged"
                      CellEditEnding="DataGrid_CellEditEnding" AlternatingRowBackground="Gainsboro" AlternationCount="2">
                <DataGrid.Columns>
                    
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <Button Grid.Row="2" Grid.ColumnSpan="2" Command="{Binding AutoTeachCommand}">Auto Teach</Button>
    </Grid>
</UserControl>
