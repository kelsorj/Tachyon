<UserControl x:Class="BioNex.BNX1536Plugin.DiagnosticsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <TabControl>
        <TabItem Header="Programs">
            <DockPanel>
                <GroupBox DockPanel.Dock="Top" Header="Program Selection">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <!-- program -->
                        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">Program:</TextBlock>
                        <ComboBox Grid.Row="0" Grid.Column="1" Margin="3" IsEditable="True" ItemsSource="{Binding ProgramItems}" SelectedItem="{Binding SelectedProgram}"></ComboBox>
                        <Button Grid.Row="0" Grid.Column="2" Margin="3" Command="{Binding RunProgramCommand}">Run</Button>
                        <!-- service program -->
                        <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">Service Program:</TextBlock>
                        <ComboBox Grid.Row="1" Grid.Column="1" Margin="3" ItemsSource="{Binding ServiceProgramItems}" SelectedItem="{Binding SelectedServiceProgram}"></ComboBox>
                        <Button Grid.Row="1" Grid.Column="2" Margin="3" Command="{Binding RunServiceProgramCommand}">Run</Button>
                    </Grid>
                </GroupBox>
                <StatusBar DockPanel.Dock="Bottom" Height="28">
                    <TextBlock Text="{Binding Status}" />
                </StatusBar>
                <GroupBox DockPanel.Dock="Bottom" Header="Log">
                    
                </GroupBox>
            </DockPanel>
        </TabItem>
        <TabItem Header="Setup">
            
        </TabItem>
    </TabControl>
</UserControl>
