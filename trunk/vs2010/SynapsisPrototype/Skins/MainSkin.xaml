<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:utils="clr-namespace:BioNex.Shared.Utils;assembly=Utils">    
    <utils:MenuIconConverter x:Key="MenuIconConv" />
    <Style x:Key="DiagnosticsMenuStyle">
        <Setter Property="MenuItem.Header" Value="{Binding Text}" />
        <Setter Property="MenuItem.ItemsSource" Value="{Binding Children}" />
        <Setter Property="MenuItem.Command" Value="{Binding Command}" />
        <Setter Property="MenuItem.Icon" Value="{Binding IconUrl, Converter={StaticResource MenuIconConv}}" />
    </Style>
    <Style TargetType="{x:Type Button}" x:Name="BioNexButton">
        <Setter Property="Button.Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" ShadowDepth="5" Color="Black" />
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>