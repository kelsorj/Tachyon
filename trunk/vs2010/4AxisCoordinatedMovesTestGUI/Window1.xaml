<Window x:Class="_4AxisCoordinatedMovesTestGUI.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:channel="clr-namespace:Channel;assembly=Channel"
    xmlns:plate="clr-namespace:PlateMover;assembly=PlateMover"
    Title="4 Axis Coordinated Motion GUI" Height="697" Width="632" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <UniformGrid Grid.Row="0" Rows="9">
            <Label>Channel spacing:</Label>
            <TextBox Name="channel_spacing" BorderBrush="Black" BorderThickness="1" Margin="3">18</TextBox>
            <Button Name="button_apply_spacing" Margin="3" Click="button_apply_spacing_Click">Apply</Button>
            <Label>Tip 1 position:</Label>
            <Slider Name="slider_tip1" Minimum="0" Maximum="628" ValueChanged="slider_tip1_ValueChanged"></Slider>
            <TextBox Name="tip1_position" BorderBrush="Black" BorderThickness="1" Margin="3"></TextBox>
            <Label>Tip 2 position:</Label>
            <Slider Name="slider_tip2" Minimum="0" Maximum="628" ValueChanged="slider_tip2_ValueChanged"></Slider>
            <TextBox Name="tip2_position" BorderBrush="Black" BorderThickness="1" Margin="3"></TextBox>
            <Label>Source plate angle:</Label>
            <Slider Name="slider_sourceplate_angle" Minimum="-360" Maximum="360" ValueChanged="slider_sourceplate_angle_ValueChanged"></Slider>
            <TextBox Name="sourceplate_angle" BorderBrush="Black" BorderThickness="1" Margin="3"></TextBox>
            <Label>Source plate Y:</Label>
            <Slider Name="slider_sourceplate_y" Minimum="0" Maximum="470" ValueChanged="slider_sourceplate_y_ValueChanged"></Slider>
            <TextBox Name="sourceplate_y" BorderBrush="Black" BorderThickness="1" Margin="3"></TextBox>
            <Label>Dest plate angle:</Label>
            <Slider Name="slider_destplate_angle" Minimum="-360" Maximum="360" ValueChanged="slider_destplate_angle_ValueChanged"></Slider>
            <TextBox Name="destplate_angle" BorderBrush="Black" BorderThickness="1" Margin="3"></TextBox>
            <Label>Dest plate Y:</Label>
            <Slider Name="slider_destplate_y" Minimum="0" Maximum="470" ValueChanged="slider_destplate_y_ValueChanged"></Slider>
            <TextBox Name="destplate_y" BorderBrush="Black" BorderThickness="1" Margin="3"></TextBox>
            <Button Name="button_test_1" Margin="3" Click="button_test_1_Click">Test move 1</Button>
            <Button Name="button_test_2" Margin="3" Click="button_test_2_Click">Test move 2</Button>
            <Button Name="button_test_3" Margin="3" Click="button_test_3_Click">Test move 3</Button>
            <Button Name="button_test_4" Margin="3" Click="button_test_4_Click">Test move 4</Button>
            <Button Name="button_test_5" Margin="3" Click="button_test_5_Click">Test move 5</Button>
            <Button Name="button_test_6" Margin="3" Click="button_test_6_Click">Test move 6</Button>
        </UniformGrid>
        <Canvas Name="canvas" Height="400" Width="600" Grid.Row="1">
            <plate:UserControl1 Name="source_plate" Canvas.Left="100">
                <!--
                <plate:UserControl1.RenderTransform>
                    <RotateTransform Angle="0"></RotateTransform>
                </plate:UserControl1.RenderTransform>
                -->
            </plate:UserControl1>
            <plate:UserControl1 Name="dest_plate" Canvas.Left="255">
                <!--
                <plate:UserControl1.RenderTransform>
                    <RotateTransform Angle="0"></RotateTransform>
                </plate:UserControl1.RenderTransform>
                -->
            </plate:UserControl1>
            <channel:UserControl1 Name="channel1">
                <channel:UserControl1.RenderTransform>
                    <TranslateTransform Y="0"></TranslateTransform>
                </channel:UserControl1.RenderTransform>
            </channel:UserControl1>
            <channel:UserControl1 Name="channel2">
                <channel:UserControl1.RenderTransform>
                    <TranslateTransform Y="0"></TranslateTransform>
                </channel:UserControl1.RenderTransform>
            </channel:UserControl1>
        </Canvas>
    </Grid>
</Window>
