<UserControl x:Class="Channel.UserControl1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="16" Width="500">
    <Canvas>
        <Rectangle Canvas.Left="0" Canvas.Top="0" Fill="LightBlue" Height="16" Width="500" Opacity=".25"></Rectangle>
        <Ellipse Name="tip" Height="8" Width="8" Fill="Black" Opacity=".5" Canvas.Left="0" Canvas.Top="4">
            <Ellipse.RenderTransform>
                <TranslateTransform X="0"></TranslateTransform>
            </Ellipse.RenderTransform>
        </Ellipse>
    </Canvas>
</UserControl>
