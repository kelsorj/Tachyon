<Window x:Class="SingleAxisPTDownloader.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Single Axis PT downloader" Height="418" Width="532" Loaded="Window_Loaded" Unloaded="Window_Unloaded">
    <Grid>
        <DockPanel>
            <GroupBox Header="PT Options" DockPanel.Dock="Top">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="30"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Margin="3" HorizontalContentAlignment="Right">PT filename:</Label>
                    <TextBox Name="text_pt_filename" Grid.Row="0" Grid.Column="1" Margin="3"></TextBox>
                    <Button Grid.Row="0" Grid.Column="2" Margin="3" Click="Button_Click">...</Button>
                    <Label Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Right" Margin="3">PT buffer size:</Label>
                    <TextBox Name="text_pt_buffer_size" Grid.Row="1" Grid.Column="1" Margin="3"></TextBox>
                    <Label Grid.Row="2" Grid.Column="0" HorizontalContentAlignment="Right" Margin="3">Status refresh:</Label>
                    <TextBox Name="text_status_refresh" Grid.Row="2" Grid.Column="1" Margin="3"></TextBox>
                    <Button Name="button_execute" Grid.Row="3" Grid.ColumnSpan="3" Margin="3" Click="button_execute_Click">Execute PT Motion</Button>
                </Grid>
            </GroupBox>
            <GroupBox Header="Log" DockPanel.Dock="Bottom">
                <TextBox Name="text_log"></TextBox>
            </GroupBox>
        </DockPanel>
    </Grid>
</Window>
