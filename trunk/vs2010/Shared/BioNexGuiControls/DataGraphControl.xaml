<UserControl x:Class="BioNex.Shared.BioNexGuiControls.DataGraphControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BioNex.Shared.BioNexGuiControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Image Name="the_image" 
               SizeChanged="the_image_SizeChanged" 
               MouseMove="the_image_MouseMove" 
               ToolTipService.ShowDuration="{Binding Source={x:Static local:DataGraphControl.TOOLTIP_DURATION}}"
        >
            <Image.ToolTip>
                <ToolTip x:Name="the_tooltip" />
            </Image.ToolTip>
        </Image>
    </Grid>
</UserControl>
