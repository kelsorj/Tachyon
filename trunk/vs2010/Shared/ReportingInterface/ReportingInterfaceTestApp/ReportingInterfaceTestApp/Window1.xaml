<Window x:Class="ReportingInterfaceTestApp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ReportingInterfaceTestApp"
    Title="ReportingInterface Test Application" Height="300" Width="536">
   
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Plugins">
                <MenuItem Header="Folder">
                    <StackPanel Orientation="Horizontal">
                        <Label>File location:</Label>
                        <TextBox Width="100" Text="{Binding Path=PluginPath, Mode=TwoWay}"></TextBox>
                        <Button Margin="3" Width="20" Click="button_select_plugin_directory_Click">...</Button>
                    </StackPanel>
                </MenuItem>
                <MenuItem Header="Load plugins" Command="{Binding LoadPluginsCommand}"/>
                <Separator></Separator>
            </MenuItem>
        </Menu>
        <TabControl DockPanel.Dock="Bottom" TabStripPlacement="Left">
            <TabItem Header="Log">
                <Grid Name="log_grid" />
            </TabItem>
            <TabItem Header="Reporting">
                <StackPanel Orientation="Vertical">
                    <Label>Log Message</Label>
                    <TextBox Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}" Margin="3"></TextBox>
                    <Button Command="{Binding SendMessageCommand}"  Margin="3">Send Message</Button>
                    <Label>Log Error</Label>
                    <TextBox Text="{Binding Error, UpdateSourceTrigger=PropertyChanged}" Margin="3"></TextBox>
                    <Button Command="{Binding SendErrorCommand}" Margin="3">Send Error</Button>
                </StackPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
