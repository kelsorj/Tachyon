<UserControl x:Class="BioNex.Shared.WPFControls.UpDown"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="50">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="UpArrow.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <DockPanel Margin="3" x:Name="LayoutRoot">
        <Button DockPanel.Dock="Top" FontSize="24" FontWeight="Bold" Command="{Binding IncrementCommand}">+</Button>
        <Button DockPanel.Dock="Bottom" FontSize="24" FontWeight="Bold" Command="{Binding DecrementCommand}">-</Button>
        <TextBlock DockPanel.Dock="Bottom" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" Text="{Binding Number}"></TextBlock>
    </DockPanel>
</UserControl>
