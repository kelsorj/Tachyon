<UserControl x:Class="AmuletTestApp.AmuletFromPcUart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <!-- byte -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Text="Byte 0:" />
            <Slider Minimum="0" Maximum="255" Width="200" Value="{Binding AmuletFromPcUartByte, UpdateSourceTrigger=PropertyChanged}" x:Name="AmuletFromPcUartByte" />
            <TextBlock Text="{Binding ElementName=AmuletFromPcUartByte, Path=Value}" />
        </StackPanel>
        <!-- word -->
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <TextBlock Text="Word 0:" />
            <Slider Minimum="0" Maximum="65535" Width="200" Value="{Binding AmuletFromPcUartWord, UpdateSourceTrigger=PropertyChanged}" x:Name="AmuletFromPcUartWord"/>
            <TextBlock Text="{Binding ElementName=AmuletFromPcUartWord, Path=Value}" />
        </StackPanel>
        <!-- string -->
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <TextBlock Text="String 0:" />
            <TextBox Width="200" Text="{Binding AmuletFromPcUartString, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>
