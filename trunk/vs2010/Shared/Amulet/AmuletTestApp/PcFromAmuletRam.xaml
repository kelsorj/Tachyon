<UserControl x:Class="AmuletTestApp.PcFromAmuletRam"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock>Byte 0:</TextBlock>
            <TextBox IsReadOnly="True" Text="{Binding PcFromAmuletRamByte}" />
            <Button Command="{Binding PcFromAmuletRamByteCommand}" Height="30" Padding="5">Get</Button>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock>Word 0:</TextBlock>
            <TextBox IsReadOnly="True" Text="{Binding PcFromAmuletRamWord}" />
            <Button Command="{Binding PcFromAmuletRamWordCommand}" Height="30" Padding="5">Get</Button>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <TextBlock>String 0:</TextBlock>
            <TextBox IsReadOnly="True" Text="{Binding PcFromAmuletRamString}" />
            <Button Command="{Binding PcFromAmuletRamStringCommand}" Height="30" Padding="5">Get</Button>
        </StackPanel>
    </Grid>
</UserControl>
