<Window x:Class="RunLogAnalyzer.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gc="clr-namespace:BioNex.Shared.GanttChart;assembly=GanttChart"
    Title="Run Log Analyzer" Height="462" Width="880">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Header="Log Specification">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center">Select CSV file:</TextBlock>
                    <TextBox MinWidth="200" Width="500" Margin="3" Text="{Binding SelectedCSVFile}"></TextBox>
                    <Button Margin="3" Width="30" Command="{Binding SelectCSVFileCommand}">...</Button>
                </StackPanel>
                <Button Grid.Row="1" Margin="3" Command="{Binding AnalyzeCommand}">Analyze Run Now</Button>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1" Header="Gantt Chart">
            <gc:UserControl1 Grid.Row="1" Name="chart" DockPanel.Dock="Top" Height="Auto" Width="Auto" />    
        </GroupBox>
    </Grid>
</Window>
