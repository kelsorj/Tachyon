<Window x:Class="GanttChartTestApp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gc="clr-namespace:BioNex.Shared.GanttChart;assembly=GanttChart"
    Title="Gantt Chart Test App" Height="376" Width="801">
    <DockPanel>
        <GroupBox Header="Task Manipulation" DockPanel.Dock="Bottom">
            <StackPanel Orientation="Vertical" Margin="3">
                <StackPanel Orientation="Horizontal" Margin="3" Width="Auto">
                    <Label>Parent:</Label>
                    <ComboBox Name="combo_parent" Margin="3" IsEditable="True" Width="100"></ComboBox>
                    <Label>Start:</Label>
                    <TextBox Name="text_start" Width="200" IsReadOnly="True"></TextBox>
                    <Button Name="button_mark_start" Margin="3" Click="button_mark_start_Click">Mark</Button>
                    <Label>End:</Label>
                    <TextBox Name="text_end" Width="200" IsReadOnly="True"></TextBox>
                    <Button Name="button_mark_end" Margin="3" Click="button_mark_end_Click">Mark and Add</Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="3" Width="Auto">
                    <Label>Task name:</Label>
                    <TextBox Name="text_task_name" Width="100" Margin="3">Aspirate</TextBox>
                    <Label>Description:</Label>
                    <TextBox Name="text_task_description" Width="200" Margin="3">Aspirate tooltip!</TextBox>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <gc:UserControl1 Name="chart" DockPanel.Dock="Top" Height="Auto" Width="Auto" />
    </DockPanel>
</Window>
