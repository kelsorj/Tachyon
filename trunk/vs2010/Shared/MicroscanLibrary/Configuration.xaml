<UserControl x:Class="BioNex.Shared.Microscan.Configuration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BioNex.Shared.Microscan"
             mc:Ignorable="d" 
             Height="521" Width="884" IsVisibleChanged="UserControl_IsVisibleChanged">

    <UserControl.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="3" />
            <Setter Property="ToolTipService.ShowOnDisabled" Value="True" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <!-- standard barcode settings -->
        <GroupBox Grid.Column="0" Header="Standard Barcode Reader Settings" BorderBrush="Orange">
            <DockPanel>
                <UniformGrid Columns="1" DockPanel.Dock="Bottom">
                    <Button Command="{Binding DownloadSettingsCommand}">Retrieve From Reader</Button>
                    <Button Command="{Binding UploadSettingsCommand}" ToolTip="Changes do not take effect until you upload the settings">Send To Reader</Button>
                    <Button Command="{Binding SendAndSaveCommand}" ToolTip="Changes do not take effect until you upload the settings">Send and Save</Button>
                    <Button Command="{Binding SendAndSaveAsDefaultsCommand}" ToolTip="Changes do not take effect until you upload the settings">Send and Save as Customer Defaults</Button>
                </UniformGrid>
                <DataGrid DockPanel.Dock="Top" ItemsSource="{Binding BcrProperties}" MinWidth="200" AutoGenerateColumns="False" 
                          AlternatingRowBackground="Gainsboro" AlternationCount="2">
                    <DataGrid.Columns>
                        <!-- http://stackoverflow.com/questions/1786773/how-to-set-the-datacontext-on-a-datagrid-column-header -->
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Content" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=PropertyNameHeader}" />
                                </Style>
                            </DataGridTemplateColumn.HeaderStyle>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=PropertyName}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Binding="{Binding Path=PropertyValue}">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Content" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=PropertyValueHeader}" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>
        <!-- configuration database -->
        <GroupBox Grid.Column="1" Header="Configuration Database" BorderBrush="Orange">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto" MinWidth="100" />
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.Resources>
                            <Style TargetType="{x:Type TextBlock}" x:Key="RightJustified">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                            <Style TargetType="{x:Type TextBlock}" x:Key="LeftJustified">
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                            <Style TargetType="{x:Type RowDefinition}">
                                <Setter Property="Height" Value="28" />
                            </Style>
                            <Style TargetType="{x:Type ComboBox}">
                                <Setter Property="Margin" Value="3" />
                            </Style>
                        </Grid.Resources>
                        <!-- select index -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource RightJustified}">Select Index:</TextBlock>
                        <ComboBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" SelectedIndex="{Binding SelectedConfigIndex}" SelectionChanged="ComboBox_SelectionChanged">
                            <ComboBoxItem>Default</ComboBoxItem>
                            <ComboBoxItem>Hive</ComboBoxItem>
                            <ComboBoxItem>BPS140</ComboBoxItem>
                            <ComboBoxItem>Dock cart ID</ComboBoxItem>
                            <ComboBoxItem>Dock cart storage</ComboBoxItem>
                            <ComboBoxItem>Kung Fu Bottom Location</ComboBoxItem>
                            <ComboBoxItem>7</ComboBoxItem>
                            <ComboBoxItem>8</ComboBoxItem>
                            <ComboBoxItem>9</ComboBoxItem>
                            <ComboBoxItem>10</ComboBoxItem>
                        </ComboBox>
                        <!-- shutter speed -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource RightJustified}">Shutter speed:</TextBlock>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ShutterSpeed}" />
                        <TextBlock Grid.Row="1" Grid.Column="2" Style="{StaticResource LeftJustified}">[15-15000]</TextBlock>
                        <!-- gain -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource RightJustified}">Gain:</TextBlock>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Gain}" />
                        <TextBlock Grid.Row="2" Grid.Column="2" Style="{StaticResource LeftJustified}">[0-48]</TextBlock>
                        <!-- focal distance -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource RightJustified}">Focal Distance:</TextBlock>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding FocalDistanceInches}" />
                        <TextBlock Grid.Row="3" Grid.Column="2" Style="{StaticResource LeftJustified}">[2.00-6.00]</TextBlock>
                        <!-- pixel sub-sampling -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource RightJustified}">Pixel Sub-Sampling:</TextBlock>
                        <ComboBox Grid.Row="4" Grid.Column="1" SelectedIndex="{Binding PixelSubSamplingIndex}">
                            <ComboBoxItem>Disabled</ComboBoxItem>
                            <ComboBoxItem>4:1</ComboBoxItem>
                            <ComboBoxItem>16:1</ComboBoxItem>
                        </ComboBox>
                        <TextBlock Grid.Row="4" Grid.Column="2" Style="{StaticResource LeftJustified}">[200-600]</TextBlock>
                        <!-- row pointer -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource RightJustified}">Row Pointer:</TextBlock>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding RowPointer}" />
                        <TextBlock Grid.Row="5" Grid.Column="2" Style="{StaticResource LeftJustified}">[0-(1536 - row depth)]</TextBlock>
                        <!-- column pointer -->
                        <TextBlock Grid.Row="6" Grid.Column="0" Style="{StaticResource RightJustified}">Column Pointer:</TextBlock>
                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding ColumnPointer}" />
                        <TextBlock Grid.Row="6" Grid.Column="2" Style="{StaticResource LeftJustified}">[0-(2048 - column width)]</TextBlock>
                        <!-- row depth -->
                        <TextBlock Grid.Row="7" Grid.Column="0" Style="{StaticResource RightJustified}">Row depth:</TextBlock>
                        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding RowDepth}"/>
                        <TextBlock Grid.Row="7" Grid.Column="2" Style="{StaticResource LeftJustified}">[3-(480 - row pointer)]</TextBlock>
                        <!-- column width -->
                        <TextBlock Grid.Row="8" Grid.Column="0" Style="{StaticResource RightJustified}">Column width:</TextBlock>
                        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding ColumnWidth}"/>
                        <TextBlock Grid.Row="8" Grid.Column="2" Style="{StaticResource LeftJustified}">[8-(752 - column pointer)]</TextBlock>
                        <!-- threshold mode -->
                        <TextBlock Grid.Row="9" Grid.Column="0" Style="{StaticResource RightJustified}">Threshold mode:</TextBlock>
                        <ComboBox Grid.Row="9" Grid.Column="1" SelectedIndex="{Binding ThresholdModeFixedIndex}">
                            <ComboBoxItem>Adaptive</ComboBoxItem>
                            <ComboBoxItem>Fixed</ComboBoxItem>
                        </ComboBox>
                        <TextBlock Grid.Row="9" Grid.Column="2" Style="{StaticResource LeftJustified}" />
                        <!-- fixed threshold value -->
                        <TextBlock Grid.Row="10" Grid.Column="0" Style="{StaticResource RightJustified}">Fixed Threshold Value:</TextBlock>
                        <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding FixedThresholdValue}"/>
                        <TextBlock Grid.Row="10" Grid.Column="2" Style="{StaticResource LeftJustified}">[0-255]</TextBlock>
                        <!-- processing mode -->
                        <TextBlock Grid.Row="11" Grid.Column="0" Style="{StaticResource RightJustified}">Processing Mode:</TextBlock>
                        <ComboBox Grid.Row="11" Grid.Column="1" SelectedIndex="{Binding ProcessingModeIndex}">
                            <ComboBoxItem>Standard</ComboBoxItem>
                            <ComboBoxItem>Fast Linear Mode</ComboBoxItem>
                            <ComboBoxItem>Q-Mode</ComboBoxItem>
                            <ComboBoxItem>Both</ComboBoxItem>
                        </ComboBox>
                        <TextBlock Grid.Row="11" Grid.Column="2" Style="{StaticResource LeftJustified}" />
                        <!-- narrow margins -->
                        <TextBlock Grid.Row="12" Grid.Column="0" Style="{StaticResource RightJustified}">Narrow Margins:</TextBlock>
                        <ComboBox Grid.Row="12" Grid.Column="1" SelectedIndex="{Binding NarrowMarginsIndex}">
                            <ComboBoxItem>Disabled</ComboBoxItem>
                            <ComboBoxItem>Enabled</ComboBoxItem>
                            <ComboBoxItem>2D Enhanced</ComboBoxItem>
                        </ComboBox>
                        <TextBlock Grid.Row="12" Grid.Column="2" Style="{StaticResource LeftJustified}" />
                        <!-- background color -->
                        <TextBlock Grid.Row="13" Grid.Column="0" Style="{StaticResource RightJustified}">Background Color:</TextBlock>
                        <ComboBox Grid.Row="13" Grid.Column="1" SelectedIndex="{Binding BackgroundColorIndex}">
                            <ComboBoxItem>White</ComboBoxItem>
                            <ComboBoxItem>Black</ComboBoxItem>
                            <ComboBoxItem>Both</ComboBoxItem>
                        </ComboBox>
                        <TextBlock Grid.Row="13" Grid.Column="2" Style="{StaticResource LeftJustified}" />
                        <!-- symbologies -->
                        <GroupBox Grid.Row="1" Grid.Column="3" Grid.RowSpan="13" BorderBrush="Orange" Header="Symbologies">
                            <StackPanel Orientation="Vertical">
                                <Button Command="{Binding ResetSymbologiesCommand}" ToolTip="Click to force this configuration to only use symbologies that are currently enabled in the reader">Reset</Button>
                                <ListBox SelectionMode="Extended" ItemsSource="{Binding AvailableSymbologies}">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListBoxItem}">
                                            <Setter Property="IsSelected" Value="{Binding Mode=TwoWay, Path=IsSelected}"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                        <Border x:Name="Bd" SnapsToDevicePixels="true" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsSelected" Value="true">
                                                                <Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                                                            </Trigger>
                                                            <!-- this handles the case where the items in the listbox are selected, but the listbox itself doesn't have focus -->
                                                            <MultiTrigger>
                                                                <MultiTrigger.Conditions>
                                                                    <Condition Property="IsSelected" Value="true"/>
                                                                    <Condition Property="Selector.IsSelectionActive" Value="false"/>
                                                                </MultiTrigger.Conditions>
                                                                <Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                                                            </MultiTrigger>
                                                            <Trigger Property="IsEnabled" Value="false">
                                                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                    <!-- reading and saving configuration database settings -->
                    <StackPanel Orientation="Vertical">
                        <Button Command="{Binding SaveIndexValuesCommand}">Save values from GUI into database</Button>
                        <Button Command="{Binding LoadIndexValuesCommand}">Load values from database into reader</Button>
                        <Button Command="{Binding ReloadConfigurationDatabaseCommand}">Reload barcode reader configuration file</Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
