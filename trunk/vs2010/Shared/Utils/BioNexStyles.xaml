<ResourceDictionary 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    
    <Style TargetType="{x:Type GroupBox}" x:Name="BioNexGroupBox">
        <Setter Property="BorderBrush" Value="Orange" />
    </Style>
    <Style TargetType="{x:Type Button}" x:Name="BioNexButton">
        <Setter Property="Margin" Value="3" />
        <Setter Property="ToolTipService.ShowOnDisabled" Value="True" />
        <Setter Property="Button.Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" ShadowDepth="5" Color="Black" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type TextBlock}" x:Name="BioNexTextBlockBase">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="3" />
    </Style>
    <Style TargetType="{x:Type TextBox}" x:Name="BioNexTextBoxBase">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="3" />
    </Style>
</ResourceDictionary>
