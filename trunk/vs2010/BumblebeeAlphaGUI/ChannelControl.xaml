<UserControl x:Class="BioNex.BumblebeeAlphaGUI.ChannelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="86" Width="673">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="6*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!-- X axis -->
        <Label Grid.RowSpan="3" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Channel X</Label>
        <Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right">X:</Label>
        <Button Grid.Row="0" Grid.Column="2" Margin="3">Home</Button>
        <!-- Z -->
        <Label Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right">Z:</Label>
        <Button Grid.Row="1" Grid.Column="2" Margin="3">Home</Button>
        <!-- W -->
        <Label Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right">W:</Label>
        <Button Grid.Row="2" Grid.Column="2" Margin="3">Home</Button>
    </Grid>
</UserControl>
