<Window x:Class="BeeSureTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BeeSure Test Application" Height="350" Width="525"
        x:Name="root" >
    <Grid>
        <TabControl x:Name="Tabs">
            <TabItem>
                <TabItem.Header>
                    <Button Command="{Binding AddBeeSureCommand}" DataContext="{Binding ElementName=root}">Add Another BeeSure</Button>
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
