<UserControl x:Class="BeeSureTestApp.BeeSurePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:scan="clr-namespace:BioNex.LiquidLevelDevice;assembly=LiquidLevelDevice"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="383">

    <UserControl.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="3" />
            <Setter Property="MinWidth" Value="100" />
        </Style>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    
    <DockPanel>
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
            <!-- initialize -->
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Button x:Name="Initialize" Command="{Binding InitializeCommand}">Initialize</Button>
                    <TextBlock>Adapter ID:</TextBlock>
                    <TextBox x:Name="adapter_id">0</TextBox>
                    <TextBlock>Simulate?</TextBlock>
                    <CheckBox x:Name="simulate" IsChecked="False"></CheckBox>
                </StackPanel>
            </DockPanel>
            <Button Command="{Binding HomeCommand}">Home</Button>
            <Button Command="{Binding MoveToPortraitCommand}">Portrait Load Position</Button>
            <Button Command="{Binding MoveToLandscapeCommand}">Landscape Load Position</Button>
            <Button Command="{Binding DiagnosticsCommand}">Show Diagnostics</Button>
            <DockPanel>
                <TextBlock Text="Select labware:" Margin="3" />
                <ComboBox ItemsSource="{Binding AvailableLabware}" IsSynchronizedWithCurrentItem="True" />
            </DockPanel>
            <Button Command="{Binding CalibrateCommand}">Calibrate</Button>
            <Button Command="{Binding ScanCommand}">Scan Plate</Button>
        </StackPanel>
        <GroupBox Header="Data Visualization" DockPanel.Dock="Bottom">
            <scan:ScanProgressPanel Name="ScanProgress" Margin="3" MinHeight="100" />
        </GroupBox>
    </DockPanel>
</UserControl>
