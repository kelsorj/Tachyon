<UserControl x:Class="BioNex.LiquidLevelDevice.EngineeringPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:utils="clr-namespace:BioNex.Shared.Utils;assembly=Utils"
             mc:Ignorable="d" 
             d:DesignHeight="640" d:DesignWidth="658" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">

    <UserControl.Resources>
        <utils:StringFormatter x:Key="PositionFormatConverter" />
        <Style x:Key="PositionStyle" TargetType="{x:Type TextBox}">
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="Green" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Margin" Value="3" />
            <Setter Property="Height" Value="25" />
        </Style>
    </UserControl.Resources>


    <DockPanel>
        <GroupBox DockPanel.Dock="Bottom" BorderBrush="Orange" Header="Teach">
            <StackPanel>
                <ComboBox Name="SelectedTeachpointCombo" Margin="3" Height="25" MinWidth="50" ItemsSource="{Binding TeachpointTypes}" SelectedValue="{Binding SelectedTeachpoint}" Visibility="{Binding RAxisVisibility}" />
                <UniformGrid Rows="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" FontWeight="DemiBold">X</TextBlock>
                        <TextBox  Style="{StaticResource PositionStyle}" Width="100" Text="{Binding XAxisTP, Converter={StaticResource PositionFormatConverter}, ConverterParameter='\{0:0.000\}'}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" FontWeight="DemiBold">Y</TextBlock>
                        <TextBox Style="{StaticResource PositionStyle}" Width="100" Text="{Binding YAxisTP, Converter={StaticResource PositionFormatConverter}, ConverterParameter='\{0:0.000\}'}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" FontWeight="DemiBold">Z</TextBlock>
                        <TextBox Style="{StaticResource PositionStyle}" Width="100" Text="{Binding ZAxisTP, Converter={StaticResource PositionFormatConverter}, ConverterParameter='\{0:0.000\}'}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Visibility="{Binding RAxisVisibility}">
                        <TextBlock VerticalAlignment="Center" FontWeight="DemiBold">R</TextBlock>
                        <TextBox Style="{StaticResource PositionStyle}" Width="100" Text="{Binding RAxisTP, Converter={StaticResource PositionFormatConverter}, ConverterParameter='\{0:0.000\}'}" />
                    </StackPanel>
                </UniformGrid>
                <UniformGrid Rows="1">
                    <Button Command="{Binding TeachHereCommand}" Margin="3" >Teach Here</Button>
                    <Button Command="{Binding MoveToTeachCommand}" Margin="3" Name="MoveToTeachpointButton">Move To Teachpoint</Button>
                    <Button Command="{Binding MoveToParkCommand}" Margin="3">Move To Park</Button>
                </UniformGrid>
            </StackPanel>                
        </GroupBox>
                  
        <GroupBox DockPanel.Dock="Top" BorderBrush="Orange" Header="Jog controls" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <!-- X Axis -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Height="20" Grid.Row="0">
                        <Rectangle RadiusX="10" RadiusY="10" Fill="Orange" Opacity="0.7" />
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold">X Axis</TextBlock>
                    </Grid>
                    <Grid Margin="3" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition Width="0.7*" />
                        </Grid.ColumnDefinitions>
                        <Button Margin="3" Command="{Binding XAxisHomeCommand}">Home</Button>
                        <GroupBox Grid.Column="3" Grid.RowSpan="2" BorderBrush="Orange" Header="Servo" >
                            <UniformGrid Rows="1">
                                <Button Margin="3" Command="{Binding XAxisServoOffCommand}">OFF</Button>
                                <Button Margin="3" Command="{Binding XAxisServoOnCommand}">ON</Button>
                            </UniformGrid>
                        </GroupBox>
                        <UniformGrid Rows ="1" Grid.Row="0" Grid.Column="1">
                            <TextBox Style="{StaticResource PositionStyle}" Width="100" Text="{Binding XAxisPosition, Converter={StaticResource PositionFormatConverter}, ConverterParameter='\{0:0.000\}'}" />
                            <ComboBox Margin="3" Height="25" MinWidth="50" ItemsSource="{Binding JogIncrements}" SelectedValue="{Binding XAxisIncrement}"></ComboBox>
                        </UniformGrid >
                        <Button Margin="3" Grid.Row="1" Grid.Column="0"  Command="{Binding XAxisJogNegCommand}" Content="Jog Left"></Button>
                        <Button Margin="3" Grid.Row="1" Grid.Column="1" Command="{Binding XAxisJogPosCommand}" Content="Jog Right"></Button>
                        
                        <Grid Grid.Row="2" Grid.ColumnSpan="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.ColumnSpan="6" RadiusX="10" RadiusY="10" Fill="Orange" Opacity="0.3" />
                            <Label>X Velocity</Label>
                            <TextBox Grid.Column="1" Text="{Binding XAxisVelocity}"></TextBox>
                            <Label Grid.Column="2">X Acceleration</Label>
                            <TextBox Grid.Column="3" Text="{Binding XAxisAcceleration}"></TextBox>
                        </Grid>
                    </Grid>
                </Grid>
                <!-- Y Axis -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Height="20" Grid.Row="0">
                        <Rectangle RadiusX="10" RadiusY="10" Fill="Orange" Opacity="0.7" />
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold">Y Axis</TextBlock>
                    </Grid>
                    <Grid Margin="3" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition Width="0.7*" />
                        </Grid.ColumnDefinitions>
                        <Button Margin="3" Command="{Binding YAxisHomeCommand}">Home</Button>
                        <GroupBox Grid.Column="3" Grid.RowSpan="2" BorderBrush="Orange" Header="Servo" >
                            <UniformGrid Rows="1">
                                <Button Margin="3" Command="{Binding YAxisServoOffCommand}">OFF</Button>
                                <Button Margin="3" Command="{Binding YAxisServoOnCommand}">ON</Button>
                            </UniformGrid>
                        </GroupBox>
                        <UniformGrid Rows ="1" Grid.Row="0" Grid.Column="1">
                            <TextBox Style="{StaticResource PositionStyle}" Width="100" Text="{Binding YAxisPosition, Converter={StaticResource PositionFormatConverter}, ConverterParameter='\{0:0.000\}'}" />
                            <ComboBox Margin="3" Height="25" MinWidth="50" ItemsSource="{Binding JogIncrements}" SelectedValue="{Binding YAxisIncrement}"></ComboBox>
                        </UniformGrid >
                        <Button Margin="3" Grid.Row="1" Grid.Column="0"  Command="{Binding YAxisJogPosCommand}" Content="Jog In"></Button>
                        <Button Margin="3" Grid.Row="1" Grid.Column="1" Command="{Binding YAxisJogNegCommand}" Content="Jog Out"></Button>

                        <Grid Grid.Row="2" Grid.ColumnSpan="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.ColumnSpan="6" RadiusX="10" RadiusY="10" Fill="Orange" Opacity="0.3" />
                            <Label>Y Velocity</Label>
                            <TextBox Grid.Column="1" Text="{Binding YAxisVelocity}"></TextBox>
                            <Label Grid.Column="2">Y Acceleration</Label>
                            <TextBox Grid.Column="3" Text="{Binding YAxisAcceleration}"></TextBox>
                        </Grid>

                    </Grid>
                </Grid>
                <!-- Z Axis -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Height="20" Grid.Row="0">
                        <Rectangle RadiusX="10" RadiusY="10" Fill="Orange" Opacity="0.7" />
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold">Z Axis</TextBlock>
                    </Grid>
                    <Grid Margin="3" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition Width="0.7*" />
                        </Grid.ColumnDefinitions>
                        <Button Margin="3" Command="{Binding ZAxisHomeCommand}">Home</Button>
                        <GroupBox Grid.Column="3" Grid.RowSpan="2" BorderBrush="Orange" Header="Servo" >
                            <UniformGrid Rows="1">
                                <Button Margin="3" Command="{Binding ZAxisServoOffCommand}">OFF</Button>
                                <Button Margin="3" Command="{Binding ZAxisServoOnCommand}">ON</Button>
                            </UniformGrid>
                        </GroupBox>
                        <UniformGrid Rows ="1" Grid.Row="0" Grid.Column="1">
                            <TextBox Style="{StaticResource PositionStyle}" Width="100" Text="{Binding ZAxisPosition, Converter={StaticResource PositionFormatConverter}, ConverterParameter='\{0:0.000\}'}" />
                            <ComboBox Margin="3" Height="25" MinWidth="50" ItemsSource="{Binding JogIncrements}" SelectedValue="{Binding ZAxisIncrement}"></ComboBox>
                        </UniformGrid >
                        <Button Margin="3" Grid.Row="1" Grid.Column="0"  Command="{Binding ZAxisJogPosCommand}" Content="Jog Up"></Button>
                        <Button Margin="3" Grid.Row="1" Grid.Column="1" Command="{Binding ZAxisJogNegCommand}" Content="Jog Down"></Button>


                        <Grid Grid.Row="2" Grid.ColumnSpan="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.ColumnSpan="6" RadiusX="10" RadiusY="10" Fill="Orange" Opacity="0.3" />
                            <Label>Z Velocity</Label>
                            <TextBox Grid.Column="1" Text="{Binding ZAxisVelocity}"></TextBox>
                            <Label Grid.Column="2">Z Acceleration</Label>
                            <TextBox Grid.Column="3" Text="{Binding ZAxisAcceleration}"></TextBox>
                        </Grid>
                    </Grid>
                </Grid>
                <!-- R Axis -->
                <Grid Grid.Row="3" Visibility="{Binding RAxisVisibility}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Height="20" Grid.Row="0">
                        <Rectangle RadiusX="10" RadiusY="10" Fill="Orange" Opacity="0.7" />
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold">R Axis</TextBlock>
                    </Grid>
                    <Grid Margin="3" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition Width="0.7*" />
                        </Grid.ColumnDefinitions>
                        <Button Margin="3" Command="{Binding RAxisHomeCommand}">Home</Button>
                        <GroupBox Grid.Column="3" Grid.RowSpan="2" BorderBrush="Orange" Header="Servo" >
                            <UniformGrid Rows="1">
                                <Button Margin="3" Command="{Binding RAxisServoOffCommand}">OFF</Button>
                                <Button Margin="3" Command="{Binding RAxisServoOnCommand}">ON</Button>
                            </UniformGrid>
                        </GroupBox>
                        <UniformGrid Rows ="1" Grid.Row="0" Grid.Column="1">
                            <TextBox Style="{StaticResource PositionStyle}" Width="100" Text="{Binding RAxisPosition, Converter={StaticResource PositionFormatConverter}, ConverterParameter='\{0:0.000\}'}" />
                            <ComboBox Margin="3" Height="25" MinWidth="50" ItemsSource="{Binding JogIncrements}" SelectedValue="{Binding RAxisIncrement}"></ComboBox>
                        </UniformGrid >
                        <Button Margin="3" Grid.Row="1" Grid.Column="0"  Command="{Binding RAxisJogPosCommand}" Content="Jog CCW"></Button>
                        <Button Margin="3" Grid.Row="1" Grid.Column="1" Command="{Binding RAxisJogNegCommand}" Content="Jog CW"></Button>


                        <Grid Grid.Row="2" Grid.ColumnSpan="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.ColumnSpan="6" RadiusX="10" RadiusY="10" Fill="Orange" Opacity="0.3" />
                            <Label>R Velocity</Label>
                            <TextBox Grid.Column="1" Text="{Binding RAxisVelocity}"></TextBox>
                            <Label Grid.Column="2">R Acceleration</Label>
                            <TextBox Grid.Column="3" Text="{Binding RAxisAcceleration}"></TextBox>
                        </Grid>
                    </Grid>
                </Grid>                <Button Margin="3" Grid.Row="4" Command="{Binding HomeAllCommand}" Content="Home All"></Button>
            </Grid>
        </GroupBox>
    </DockPanel>
</UserControl>
