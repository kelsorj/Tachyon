<UserControl x:Class="BioNex.LiquidLevelDevice.OutputConfigPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="360" d:DesignWidth="448"
             >
    <StackPanel>
        <GroupBox Header="Output Folder" BorderBrush="Orange" >
            <StackPanel>
                <DockPanel>
                    <Button DockPanel.Dock="right" Margin="3" Command="{Binding BrowseCommand}">...</Button>
                    <TextBox DockPanel.Dock="Left" Margin="3" Text="{Binding OutputFilePath}" />               
                </DockPanel>
                <CheckBox IsChecked="{Binding NewFilePerCap}" Margin="3" FlowDirection="RightToLeft">Start a new file for each capture</CheckBox>
            </StackPanel>                
        </GroupBox>
        <GroupBox Header="Line Format" BorderBrush="Orange" >
            <StackPanel>
                <DockPanel>
                    <TextBlock DockPanel.Dock="left" Margin="3" HorizontalAlignment="Right">Field delimiter</TextBlock>
                    <TextBox DockPanel.Dock="right" Margin="3" Text="{Binding Delimeter}" />
                </DockPanel>
                <CheckBox IsChecked="{Binding LogHeader}" Margin="3" FlowDirection="RightToLeft">Header Row</CheckBox>
                <CheckBox IsChecked="{Binding LogTimestamp}" Margin="3" FlowDirection="RightToLeft">Timestamp</CheckBox>
                <CheckBox IsChecked="{Binding LogRunCounter}" Margin="3" FlowDirection="RightToLeft">Run Counter</CheckBox>
                <CheckBox IsChecked="{Binding LogChannel}" Margin="3" FlowDirection="RightToLeft">Channel</CheckBox>
                <CheckBox IsChecked="{Binding LogColumn}" Margin="3" FlowDirection="RightToLeft">Column</CheckBox>
                <CheckBox IsChecked="{Binding LogRow}" Margin="3" FlowDirection="RightToLeft">Row</CheckBox>
                <CheckBox IsChecked="{Binding LogX}" Margin="3" FlowDirection="RightToLeft">X</CheckBox>
                <CheckBox IsChecked="{Binding LogY}" Margin="3" FlowDirection="RightToLeft">Y</CheckBox>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
