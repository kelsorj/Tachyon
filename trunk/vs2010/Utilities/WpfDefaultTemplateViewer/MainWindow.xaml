<Window x:Class="WpfDefaultTemplateViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewer="clr-namespace:XMLViewer;assembly=XMLViewer"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <TextBlock Text="Select WPF element:" VerticalAlignment="Center" Margin="3" />
            <ComboBox ItemsSource="{Binding WpfElements}" IsSynchronizedWithCurrentItem="True" Margin="3" />
        </StackPanel>
        <GroupBox Header="WPF Default Style Information">
            <viewer:Viewer x:Name="_viewer" />
        </GroupBox>
    </DockPanel>
</Window>
