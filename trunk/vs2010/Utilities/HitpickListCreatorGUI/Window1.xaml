<Window x:Class="BioNex.HitpickListCreatorGUI.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:plate="clr-namespace:BioNex.HitpickListCreatorGUI.UserControlPlate96;assembly=UserControlPlate96"
    Title="Hitpick List Creator" Height="441" Width="1005"
    Loaded="OnWindowLoaded" PreviewMouseLeftButtonUp="Window_PreviewMouseLeftButtonUp" PreviewMouseLeftButtonDown="Window_PreviewMouseLeftButtonDown">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <GroupBox Grid.Row="0" Grid.Column="0" Header="Log" Height="200">
                <TextBox Name="log"></TextBox>
            </GroupBox>
            <GroupBox Grid.Row="0" Grid.Column="1" Header="Options">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width=".25*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!-- default volume -->
                    <Label Grid.Row="0" Grid.Column="0" HorizontalContentAlignment="Right" Height="30">Default volume:</Label>
                    <TextBox Name="text_volume" Grid.Row="0" Grid.Column="1" Height="30">10</TextBox>
                    <Label Grid.Row="0" Grid.Column="3" HorizontalContentAlignment="Left" Height="30">uL</Label>
                    <!-- default liquid class -->
                    <Label Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Right" Height="30">Default liquid class:</Label>
                    <ComboBox Name="combo_liquid_class" Grid.Row="1" Grid.Column="1" Height="30" Grid.ColumnSpan="2"></ComboBox>
                    <!-- filename -->
                    <Label Grid.Row="2" Grid.Column="0" HorizontalContentAlignment="Right" Height="30">XML filepath:</Label>
                    <TextBox Name="text_filepath" Grid.Row="2" Grid.Column="1" Height="30">c:\hitpickgui.xml</TextBox>
                    <Button Name="button_select_file" Click="button_select_file_Click" Grid.Row="2" Grid.Column="2" Height="30">...</Button>
                    <!-- write button -->
                    <Button Name="button_write" Click="button_write_Click" Grid.Row="3" Grid.ColumnSpan="3" Height="30">Write Hitpick XML File</Button>
                </Grid>
            </GroupBox>
        </Grid>
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ScrollViewer Name="scrollviewer_source" Grid.Row="0" Grid.Column="0">
                <StackPanel Name="stackpanel_source" Margin="3" Orientation="Vertical"></StackPanel>
            </ScrollViewer>
            <ScrollViewer Name="scrollviewer_dest" Grid.Row="0" Grid.Column="1">
                <StackPanel Name="stackpanel_dest" Margin="3" Orientation="Vertical"></StackPanel>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>
