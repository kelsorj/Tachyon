<Window x:Class="BioNex.HiGIntegration.Diagnostics"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:utils="clr-namespace:BioNex.Shared.Utils;assembly=Utils"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="342" SizeToContent="WidthAndHeight">

    <Window.Resources>
        <utils:StringFormatter x:Key="PositionFormatConverter" />
        <Style x:Key="NumberStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="Green" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontFamily" Value="Lucida Sans Typewriter" />
            <Setter Property="FontSize" Value="36" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="Margin" Value="3" />
            <Setter Property="MinHeight" Value="50" />
        </Style>                
    </Window.Resources>

    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical" Margin="3">
            <!-- time remaining -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="3" Text="Time remaining (sec):" />
                <TextBlock Margin="3" Text="{Binding SpinSecRemaining, Converter={StaticResource PositionFormatConverter}, ConverterParameter='\{0:0.0\}'}" />
            </StackPanel>
            <!-- acceleration -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="3" Text="Acceleration:" VerticalAlignment="Center" />
                <TextBox Margin="3" Text="{Binding Accel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center" MinWidth="40" />
                <TextBlock VerticalAlignment="Center" Text="%" />
            </StackPanel>
            <Slider Minimum="1" Maximum="100" Value="{Binding Accel, Mode=TwoWay}" Margin="3" />
            <!-- deceleration -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="3" Text="Deceleration:" VerticalAlignment="Center" />
                <TextBox Margin="3" Text="{Binding Decel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center" MinWidth="40" />
                <TextBlock VerticalAlignment="Center" Text="%" />
            </StackPanel>
            <Slider Minimum="1" Maximum="100" Value="{Binding Decel, Mode=TwoWay}" Margin="3"/>
            <!-- max gs -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="3" Text="Desired Gs:" VerticalAlignment="Center" />
                <TextBox Margin="3" MinWidth="50" Text="{Binding DesiredGs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center" />
            </StackPanel>
            <Slider Minimum="250" Maximum="5000" Value="{Binding DesiredGs, Mode=TwoWay}" Margin="3" Name="MaxGsSlider" />
            <!-- spin time -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="3" Text="Spin time:" VerticalAlignment="Center" />
                <TextBox Margin="3" Text="{Binding SpinTimeSeconds, Mode=TwoWay}" VerticalContentAlignment="Center" MinWidth="40" />
                <TextBlock VerticalAlignment="Center" Text="s" />
            </StackPanel>
            <Slider Minimum="1" Maximum="60" Value="{Binding SpinTimeSeconds, Mode=TwoWay}" Margin="3" />
            <!-- estimated cycle time -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="3" Text="Estimated cycle time:" VerticalAlignment="Center" />
                <TextBlock Margin="3" Text="{Binding EstimatedCycleTimeSeconds, Converter={StaticResource PositionFormatConverter}, ConverterParameter='\{0:0.0\}'}" VerticalAlignment="Center" />
                <TextBlock VerticalAlignment="Center" Text="s" />
            </StackPanel>

            <!-- button panel below -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MaxWidth="64" />
                    <ColumnDefinition MaxWidth="64" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!-- spin and abort -->
                <StackPanel Grid.Column="0" Grid.RowSpan="4" VerticalAlignment="Center">
                    <Button Margin="3" Command="{Binding SpinCommand}" HorizontalContentAlignment="Center" BorderThickness="0" BorderBrush="Transparent" Background="Transparent">
                        <Button.Content>
                            <Grid>
                                <Image Source="Images/spin.png"></Image>
                            </Grid>
                        </Button.Content>
                    </Button>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="DemiBold" Foreground="Black">Spin</TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.RowSpan="4" VerticalAlignment="Center">
                    <Button Margin="3" Command="{Binding AbortSpinCommand}" HorizontalContentAlignment="Center" BorderThickness="0" BorderBrush="Transparent" Background="Transparent">
                        <Button.Content>
                            <Grid>
                                <Image Source="Images/stop.png" Opacity="0.7"></Image>
                            </Grid>
                        </Button.Content>
                    </Button>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="DemiBold" Foreground="Black">Abort</TextBlock>
                </StackPanel>
                <!-- home -->
                <Button Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="0" Margin="3" Command="{Binding HomeCommand}" Content="Home" />
                <!-- bucket position indicators -->
                <utils:StatusIndicator Grid.Column="2" Grid.Row="1" IndicatorText="At Bucket 1" IndicatorTextColor="Goldenrod" Height="25" OutlineColor="Gray" OutlineRadius="3" FillColor="{Binding AtBucket1Color}" />
                <utils:StatusIndicator Grid.Column="3" Grid.Row="1" IndicatorText="At Bucket 2" IndicatorTextColor="Goldenrod" Height="25" OutlineColor="Gray" OutlineRadius="3" FillColor="{Binding AtBucket2Color}" />
                <Button Grid.Column="2" Grid.Row="2" Margin="3" Command="{Binding OpenDoorToBucket1Command}" Content="Present Bucket 1" />
                <Button Grid.Column="3" Grid.Row="2" Margin="3" Command="{Binding OpenDoorToBucket2Command}" Content="Present Bucket 2" />
                <Button Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="3" Margin="3" Command="{Binding CloseDoorCommand}" Content="Close Shield" />
            </Grid>
        </StackPanel>
        <GroupBox DockPanel.Dock="Top" Header="G Readout">
            <TextBlock VerticalAlignment="Stretch" Style="{StaticResource NumberStyle}" Text="{Binding CurrentGs, Converter={StaticResource PositionFormatConverter}, ConverterParameter='\{0:0\}'}"></TextBlock>
        </GroupBox>
    </DockPanel>
</Window>
