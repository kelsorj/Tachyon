<UserControl x:Class="BioNex.Hig.EngineeringPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:utils="clr-namespace:BioNex.Shared.Utils;assembly=Utils"
             mc:Ignorable="d" 
             d:DesignHeight="414" d:DesignWidth="691" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <utils:StringFormatter x:Key="PositionFormatConverter" />
        <Style x:Key="PositionStyle" TargetType="{x:Type TextBox}">
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="Green" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Margin" Value="3" />
            <Setter Property="Height" Value="25" />
        </Style>
    </UserControl.Resources>
    
    <DockPanel>
        <!-- EEPROM settings -->
        <GroupBox Header="EEPROM settings" BorderBrush="Orange" DockPanel.Dock="Left" MinWidth="250">
            <DockPanel>
                <Button DockPanel.Dock="Bottom" Command="{Binding ExportSettingsCommand}" Content="Export Settings to File" Margin="3" />
                <Button DockPanel.Dock="Bottom" Command="{Binding ReloadFromDriveToGUICommand}" Content="Load Settings from Device" Margin="3" />
                <Button DockPanel.Dock="Bottom" Command="{Binding ApplySettingsCommand}" Content="Save Settings to Device" Margin="3" />
                <Button DockPanel.Dock="Bottom" Command="{Binding LoadDefaultsToGUICommand}" Content="Auto-fill Default Settings" Margin="3" />
                <DataGrid ItemsSource="{Binding EepromSettings}" AutoGenerateColumns="False" DockPanel.Dock="Top"
                          CurrentCellChanged="DataGrid_CurrentCellChanged" CellEditEnding="DataGrid_CellEditEnding"
                          AlternatingRowBackground="Gainsboro" AlternationCount="2">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Setting Name">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=HumanReadableName}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Value" Binding="{Binding Path=Value}" />
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>
        <!-- end EEPROM settings -->
        
        <!-- Jog controls -->
        <DockPanel DockPanel.Dock="Right">
            <GroupBox Header="Jog controls" BorderBrush="Orange" DockPanel.Dock="Top">
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- spindle -->
                        <RowDefinition Height="Auto"/>
                        <!-- shield -->
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Spindle jog controls -->
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Height="20" Grid.Row="0">
                            <Rectangle RadiusX="10" RadiusY="10" Fill="Orange" Opacity="0.7" />
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold">Spindle</TextBlock>
                        </Grid>
                        <Grid Margin="5" Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition Width="0.7*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Button Margin="3" Grid.Column="0" Command="{Binding SpindleHomeCommand}">Home</Button>
                            </Grid>
                            <Grid Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center">Servo:</TextBlock>
                                <Button Margin="3" Grid.Column="1" Command="{Binding SpindleServoOffCommand}">OFF</Button>
                                <Button Margin="3" Grid.Column="2" Command="{Binding SpindleServoOnCommand}">ON</Button>
                            </Grid>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Center">
                                <TextBox Style="{StaticResource PositionStyle}" Width="100" Text="{Binding SpindlePosition, Converter={StaticResource PositionFormatConverter}, ConverterParameter='\{0:0.000\}'}" />
                                <ComboBox Margin="3" Height="25" MinWidth="50" ItemsSource="{Binding JogIncrements}" SelectedValue="{Binding SpindleIncrement}"></ComboBox>
                            </StackPanel>
                            <Button Margin="3" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Command="{Binding JogCCWCommand}" Content="Jog CCW  --&gt;&gt;"></Button>
                            <Button Margin="3" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Command="{Binding JogCWCommand}" Content="Jog CW  &lt;&lt;--"></Button>
                            <Button Margin="3" Grid.Row="1" Grid.Column="2" Command="{Binding TeachBucket1Command}">Teach Bucket 1</Button>
                            <Button Margin="3" Grid.Row="2" Grid.Column="2" Command="{Binding TeachBucket2Command}">Teach Bucket 2</Button>
                        </Grid>
                    </Grid>
                    <!-- Shield jog controls -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Height="20" DockPanel.Dock="Top" Grid.Row="0">
                            <Rectangle RadiusX="10" RadiusY="10" Fill="Orange" Opacity="0.7" />
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold">Shield</TextBlock>
                        </Grid>
                        <Grid DockPanel.Dock="Top" Margin="5" Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition Width="0.7*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Button Margin="3" Grid.Column="0" Command="{Binding ShieldHomeCommand}">Home</Button>
                            </Grid>
                            <Grid Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center">Servo:</TextBlock>
                                <Button Margin="3" Grid.Column="1" Command="{Binding ShieldServoOffCommand}">OFF</Button>
                                <Button Margin="3" Grid.Column="2" Command="{Binding ShieldServoOnCommand}">ON</Button>
                            </Grid>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Grid.ColumnSpan="3">
                                <TextBox Style="{StaticResource PositionStyle}" Width="100" Text="{Binding ShieldPosition, Converter={StaticResource PositionFormatConverter}, ConverterParameter='\{0:0.000\}'}" />
                                <ComboBox Grid.Row="1" Margin="3" Height="25"  MinWidth="50" ItemsSource="{Binding JogIncrements}" SelectedValue="{Binding ShieldIncrement}"></ComboBox>
                            </StackPanel>
                            <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="3" Command="{Binding JogShieldCCWCommand}">Jog Open</Button>
                            <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="3" Command="{Binding JogShieldCWCommand}">Jog Closed</Button>
                            <Button Margin="3" Grid.Row="1" Grid.Column="2" Command="{Binding TeachShieldClosedCommand}">Teach Closed</Button>
                            <Button Margin="3" Grid.Row="2" Grid.Column="2" Command="{Binding TeachShieldOpenCommand}">Teach Open</Button>
                        </Grid>
                    </Grid>
                </Grid>
            </GroupBox>
            <GroupBox Header="Functions" BorderBrush="Orange">
                <UniformGrid Columns="1">
                    <!-- Button Margin="3" Command="{Binding SetupSpindleCommutationCommand}">Set up Spindle Commutation</Button -->
                    <Button Margin="3" Command="{Binding SetupSpindleHomeCommand}">Set up Spindle Home Position (Teach Bucket Pos #1, #2)</Button>
                    <Button Margin="3" Command="{Binding ImbalanceThresholdCalibrationCommand}">Run Imbalance Threshold Calibration</Button>
                    <UniformGrid Rows="1">
                        <Button Margin="3" Command="{Binding ReprogramShieldCommand}">Reprogram Shield Controller</Button>
                        <Button Margin="3" Command="{Binding ReprogramSpindleCommand}">Reprogram Spindle Controller</Button>
                    </UniformGrid>
                </UniformGrid>
            </GroupBox>
        </DockPanel>
        <!-- end Jog controls -->
    </DockPanel>
</UserControl>
