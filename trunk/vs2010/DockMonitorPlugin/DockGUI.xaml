<UserControl x:Class="BioNex.Plugins.DockGUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:utils="clr-namespace:BioNex.Shared.Utils;assembly=Utils"
             xmlns:bionexgui="clr-namespace:BioNex.Shared.BioNexGuiControls;assembly=BioNexGuiControls"
             mc:Ignorable="d" 
             d:DesignHeight="614" d:DesignWidth="592">
    
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="6" />
            <Setter Property="ToolTipService.ShowOnDisabled" Value="True" />
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <DockPanel>
            <!-- cart status -->
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <GroupBox Grid.Column="0" Header="Cart ID" BorderBrush="Orange" FontSize="16" Margin="0,0,0,10">
                    <TextBlock Text="{Binding CartHumanReadable}" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </GroupBox>
                    <Grid Grid.Column="1" Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <utils:StatusIndicator Grid.Column="0" OutlineColor="Gray" FillColor="{Binding CartDockedColor}" IndicatorText="Cart Docked" OutlineRadius="8" Margin="5" ToolTip="{Binding CartDockedToolTip}" IndicatorTextColor="Black" IndicatorTextFontSize="14" OutlineBorderThickness="3" />
                        <utils:StatusIndicator Grid.Column="1" OutlineColor="Gray" FillColor="{Binding CartPresentColor}" IndicatorText="Cart Present" OutlineRadius="8" Margin="5" IndicatorTextColor="Black" IndicatorTextFontSize="14" OutlineBorderThickness="3" />
                        <utils:StatusIndicator Grid.Column="2" OutlineColor="Gray" FillColor="{Binding CartReinventoryingColor}" IndicatorText="Cart Inventoried" OutlineRadius="8" Margin="5" IndicatorTextColor="Black" IndicatorTextFontSize="14" OutlineBorderThickness="3" />
                    </Grid>
            </Grid>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <GroupBox Header="Dock Inventory View" BorderBrush="Orange" >
                    <Grid>
                        <Image Source="Images\BeeSmart_small.jpg" Opacity="0.08" />
                        <bionexgui:InventoryControl Name="inventory_control" />
                    </Grid>                    
                </GroupBox>
                <Viewbox Grid.Row="1">
                    <UniformGrid Rows="1">
                        <Button Command="{Binding RequestToDockCommand}" ToolTip="{Binding RequestToDockToolTip}" Height="60" FontSize="20" FontWeight="DemiBold" Content="Request to Dock">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="5" Color="Black" />
                            </Button.Effect>                        
                        </Button>
                        <Button Command="{Binding ReinventoryCommand}" ToolTip="{Binding ReinventoryToolTip}" Height="60" FontSize="20" FontWeight="DemiBold" Content="Reinventory Cart">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="5" Color="Black" />
                            </Button.Effect>                        
                        </Button>
                        <Button Command="{Binding RequestToUndockCommand}" ToolTip="{Binding RequestToUndockToolTip}" Height="60" FontSize="20" FontWeight="DemiBold" Content="Request to Undock">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="5" Color="Black" />
                            </Button.Effect>
                        </Button>
                    </UniformGrid>
                </Viewbox>
            </Grid>
        </DockPanel>
<!--        <Grid>
            <Rectangle x:Name="Overlay" Fill="DarkRed" Opacity="0.4" IsHitTestVisible="False" Visibility="{Binding UndockOverlayVisible}" />
            <TextBlock FontSize="72" FontFamily="Arial Black" TextWrapping="Wrap" Visibility="{Binding UndockOverlayVisible}" Text="Ready to Undock" Foreground="Yellow" IsHitTestVisible="False" Opacity="{Binding ElementName=Overlay, Path=Opacity}" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        </Grid> -->
    </Grid>
</UserControl>
