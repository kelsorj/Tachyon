<UserControl x:Class="BioNex.CustomerGUIPlugins.SystemPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             MinHeight="145" MinWidth="171">

    <StackPanel>
        <StackPanel Orientation="Vertical" Margin="5">
            <Button Margin="3" Height="64" Command="{Binding CustomerGuiPauseCommand}">
                <Button.Content>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="48" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="Images\pause.png" Height="32" Width="32" Opacity="0.8" Margin="3"/>
                        <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="Pause" FontWeight="Bold" FontSize="20"/>
                    </Grid>
                </Button.Content>
                <!--
                <Button.Template>
                    <ControlTemplate>
                        <Grid>
                            <Rectangle Stroke="Black" StrokeThickness="0.5" Margin="2" SnapsToDevicePixels="true" RadiusX="20" RadiusY="20"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
                -->
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5" Color="Black" />
                </Button.Effect>
            </Button>
            <Button Margin="3" Height="64" Command="{Binding CustomerGuiResumeCommand}">
                <Button.Content>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="48" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="Images\resume.png" Height="32" Width="32" Opacity="0.8" Margin="3"/>
                        <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{Binding ResumeButtonText}" FontWeight="Bold" FontSize="20"/>
                    </Grid>
                </Button.Content>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5" Color="Black" />
                </Button.Effect>
            </Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="5">
            <Button Margin="3" Height="64" Command="{Binding CustomerGuiShowTipBoxManager}">
                <Button.Content>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Show Tip-Box Manager" />
                </Button.Content>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5" Color="Black" />
                </Button.Effect>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
