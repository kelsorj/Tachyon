<UserControl x:Class="BioNex.CustomerGUIPlugins.LabAuto2012GUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:utils="clr-namespace:BioNex.Shared.Utils;assembly=Utils"
             mc:Ignorable="d" 
             d:DesignHeight="288" d:DesignWidth="692">

    <UserControl.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="ToolTipService.ShowOnDisabled" Value="True" />
            <Setter Property="Margin" Value="3" />
        </Style>
    </UserControl.Resources>
    
    <!-- ideally, we would have a custom panel here that will allow databinding -->
    <DockPanel>
        <!--
        <GroupBox Header="System Status" DockPanel.Dock="Top" BorderBrush="Orange" BorderThickness="3">
            <UniformGrid Rows="1" Grid.Row="0">
                <utils:StatusIndicator FontSize="16" OutlineHeight="50" OutlineWidth="130" OutlineColor="Gray" FillHeight="44" FillWidth="124" FillColor="{Binding IdleColor}" IndicatorText="Idle" OutlineRadius="8" FillRadius="6" Margin="5" />
                <utils:StatusIndicator FontSize="16" OutlineHeight="50" OutlineWidth="130" OutlineColor="Gray" FillHeight="44" FillWidth="124" FillColor="{Binding HomingColor}" IndicatorText="Homing" OutlineRadius="8" FillRadius="6" Margin="5" />
                <utils:StatusIndicator FontSize="16" OutlineHeight="50" OutlineWidth="130" OutlineColor="Gray" FillHeight="44" FillWidth="124" FillColor="{Binding ProcessingColor}" IndicatorText="Processing" OutlineRadius="8" FillRadius="6" Margin="5" />
                <utils:StatusIndicator FontSize="16" OutlineHeight="50" OutlineWidth="130" OutlineColor="Gray" FillHeight="44" FillWidth="124" FillColor="{Binding MovingColor}" IndicatorText="Moving Plate" OutlineRadius="8" FillRadius="6" Margin="5" />
                <utils:StatusIndicator FontSize="16" OutlineHeight="50" OutlineWidth="130" OutlineColor="Gray" FillHeight="44" FillWidth="124" FillColor="{Binding ReinventoryingColor}" IndicatorText="Reinventorying" OutlineRadius="8" FillRadius="6" Margin="5" />
                <utils:StatusIndicator FontSize="16" OutlineHeight="50" OutlineWidth="130" OutlineColor="Gray" FillHeight="44" FillWidth="124" FillColor="{Binding DockingColor}" IndicatorText="Docking" OutlineRadius="8" FillRadius="6" Margin="5" />
                <utils:StatusIndicator FontSize="16" OutlineHeight="50" OutlineWidth="130" OutlineColor="Gray" FillHeight="44" FillWidth="124" FillColor="{Binding UndockingColor}" IndicatorText="Undocking" OutlineRadius="8" FillRadius="6" Margin="5" />
            </UniformGrid>
        </GroupBox>
        -->
        <GroupBox Header="System Functions" DockPanel.Dock="Top" BorderBrush="Orange" BorderThickness="2" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!-- load hitpick file -->
                <TextBlock Grid.Column="0" Grid.Row="0" Text="Select hitpick file:" HorizontalAlignment="Right" VerticalAlignment="Center" />
                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
                    <TextBlock Text="{Binding SelectedHitpickFile}" VerticalAlignment="Center" />
                    <Button Command="{Binding SelectHitpickFileCommand}" Width="50" Content="..." />
                    <Button Command="{Binding EnqueueHitpickCommand}" Width="100" Content="Add Hitpick List" />
                </StackPanel>
                <!-- reinventory static storage -->
                <Button Grid.ColumnSpan="2" Grid.Row="1" Command="{Binding ReinventoryStaticStorageCommand}" ToolTipService.ShowOnDisabled="True" ToolTip="{Binding ReinventoryStaticStorageToolTip}" Content="Reinventory Static Storage" />
                <!-- display static storage -->
                <Button Grid.ColumnSpan="2" Grid.Row="2" Command="{Binding DisplayStaticStorageCommand}" ToolTipService.ShowOnDisabled="True" ToolTip="{Binding DisplayStaticStorageToolTip}" Content="Display Static Storage" />
                <!-- home all -->
                <Button Grid.ColumnSpan="2" Grid.Row="3" Command="{Binding HomeAllCommand}" ToolTipService.ShowOnDisabled="True" ToolTip="{Binding HomeAllCommandToolTip}" Content="Home All" />
            </Grid>
        </GroupBox>
        <!-- liquid level sensor and dock -->
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <GroupBox Grid.Column="0" Header="Liquid Level Scan Progress" BorderBrush="Orange" MinWidth="180" BorderThickness="2">
                <Grid x:Name="LLSPanel" />
            </GroupBox>
            <GridSplitter Grid.Column="1" ResizeDirection="Columns" ResizeBehavior="PreviousAndNext" Width="3" />
            <DockPanel Grid.Column="2">
                <GroupBox Header="HiG Speed" BorderBrush="Orange" BorderThickness="2" DockPanel.Dock="Bottom">
                    <Grid x:Name="HigPanel" />
                </GroupBox>
                <GroupBox Header="Dock 1" BorderBrush="Orange" BorderThickness="2" DockPanel.Dock="Top">
                    <DockPanel>
                        <UniformGrid Rows="1" x:Name="DockPanel1" DockPanel.Dock="Top"  />
                    </DockPanel>                    
                </GroupBox>
            </DockPanel>
        </Grid>
    </DockPanel>
</UserControl>
