<UserControl x:Class="LiquidLevelSensingGUI.LiquidLevelGUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:bnx="clr-namespace:BioNex.Shared.BioNexGuiControls;assembly=BioNexGuiControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition MinWidth="150"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!-- Header -->
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center">Liquid Level Sensing Checklist</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">Home all devices</TextBlock>
            <Button Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Margin="3" Padding="5,0,5,0" MinHeight="50" Command="{Binding HomeAllDevicesCommand}" >Home now</Button>
            <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Center">Calibrate Sensors</TextBlock>
            <Button Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" Margin="3" Padding="5,0,5,0" MinHeight="50" Command="{Binding CalibrateSensorsCommand}" >Calibrate</Button>
        </Grid>
        <Grid DockPanel.Dock="Bottom" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <bnx:Data3DGraphControl Grid.Column="0"  Name="Graph3D" Margin="3" />
        </Grid>
    </DockPanel>
</UserControl>
