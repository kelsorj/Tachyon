<Window x:Class="BioNex.HiveRpc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hive Server Test Application" Height="350" Width="525" Closing="Window_Closing">
    <DockPanel>
        <GroupBox Header="RPC Connection" BorderBrush="Orange" DockPanel.Dock="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Margin="3">Remote Host:</TextBlock>
                <TextBox Grid.Row="0" Grid.Column="1"  Margin="3" Text="{Binding HostName}"></TextBox>
                <TextBlock Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right" Margin="3">Remote Port:</TextBlock>
                <TextBox Grid.Row="0" Grid.Column="3"  Margin="3" Text="{Binding RemotePort}"></TextBox>
                <TextBlock Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" Margin="3">Listen Port:</TextBlock>
                <TextBox Grid.Row="1" Grid.Column="3"  Margin="3" Text="{Binding ListenPort}"></TextBox>
                <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="4" Margin="3" Command="{Binding ReconnectCommand}">Reconnect</Button>
            </Grid>
        </GroupBox>
        <GroupBox Header="Connection Status" BorderBrush="Orange" DockPanel.Dock="Bottom">
            <Grid>
                <Rectangle Fill="{Binding ConnectionStatusColor}"/>
                <TextBlock Text="{Binding ConnectionStatusText}" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16" Foreground="Goldenrod"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Plates" BorderBrush="Orange" DockPanel.Dock="Top">
            <DockPanel>
                <Button DockPanel.Dock="Bottom" Command="{Binding ReinventoryCompleteCommand}">Reinventory Complete</Button>
                <DataGrid DockPanel.Dock="Top" ItemsSource="{Binding InventoryView}" AutoGenerateColumns="False"
                          AlternatingRowBackground="Gainsboro" AlternationCount="2">
                    <DataGrid.Columns>
                        <!-- plate barcode, don't allow editing -->
                        <DataGridTemplateColumn Header="Plate Barcode">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Barcode}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!-- fate, don't allow editing -->
                        <DataGridTemplateColumn Header="Fate">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Fate}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>
    </DockPanel>
</Window>
