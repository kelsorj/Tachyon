<Window x:Class="BioNex.SynapsisPrototype.AddPropertyDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Title="Add New Device Property" x:Name="root"
             Width="350" Height="212" ShowInTaskbar="False" WindowStartupLocation="CenterOwner"
            FocusManager.FocusedElement="{Binding ElementName=_property_name}">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="3" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- company name -->
            <RowDefinition />
            <!-- product name -->
            <RowDefinition />
            <!-- device name -->
            <RowDefinition />
            <!-- property name -->
            <RowDefinition />
            <!-- property value -->
            <RowDefinition />
            <!-- OK / Cancel -->
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!-- label -->
            <ColumnDefinition Width="93" />
            <!-- value -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- company name -->
        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">Company name:</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3" Text="{Binding CompanyName}" />
        <!-- product name -->
        <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">Product name:</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3" Text="{Binding ProductName}" />
        <!-- device name -->
        <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">Device name:</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3" Text="{Binding DeviceName}" />
        <!-- property name -->
        <TextBlock Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">Property name:</TextBlock>
        <TextBox Grid.Row="3" Name="_property_name" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3" Text="{Binding PropertyName}" MinWidth="200"></TextBox>
        <!-- property value -->
        <TextBlock Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">Property value:</TextBlock>
        <TextBox Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3" Text="{Binding PropertyValue}" MinWidth="200"></TextBox>
        <!-- ok / cancel -->
        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Right">
            <Button Command="{Binding OkCommand}" Width="60" IsDefault="True">OK</Button>
            <Button Command="{Binding CancelCommand}" Width="60">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
