<UserControl x:Class="BioNex.Bumblebee2DSimulatorControl.Plate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="85" Width="125">
    <Canvas Width="125" Height="85">
        <ListBox Width="125" Height="85" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsSource="{Binding Wells}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Width="Auto" Height="Auto" ItemWidth="{Binding WellBoundary}" ItemHeight="{Binding WellBoundary}"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Ellipse Width="{Binding WellDiameter}" Height="{Binding WellDiameter}" Fill="LightBlue" Stroke="DarkBlue" StrokeThickness="1" ToolTip="{Binding WellName}"></Ellipse>
                </DataTemplate>                    
            </ListBox.ItemTemplate>
        </ListBox>
        <Rectangle Width="125" Height="85" RadiusX="3" RadiusY="3" Stroke="Black" StrokeThickness="1" />
        <Polygon Points="0,0 10,0 0,10 0,0" Fill="Blue" Opacity="0.5"></Polygon>
    </Canvas>
</UserControl>
