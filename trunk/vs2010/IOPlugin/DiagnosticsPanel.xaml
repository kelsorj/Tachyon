<UserControl x:Class="BioNex.IOPlugin.DiagnosticsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System.Windows;assembly=PresentationCore"
    xmlns:local="clr-namespace:BioNex.IOPlugin"
    Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded"
    Height="Auto" Width="Auto">
    
    <UserControl.Resources>
        <!--
        <DataTemplate x:Key="OutputTemplate" DataType="{x:Type local:InputOutput}">
            <Grid Width="85">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition MinHeight="85" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{Binding Path=Index}" HorizontalAlignment="Center" Margin="5"/>
                <ToggleButton Grid.Row="1" IsChecked="{Binding Path=State}" Margin="5" Command="{Binding OutputCommand}" CommandParameter="{Binding Path=State}"/>
            </Grid>
        </DataTemplate>
        <Style x:Key="OutputsStyle" TargetType="{x:Type ListBoxItem}">
            <Setter Property="ContentTemplate" Value="{StaticResource OutputTemplate}" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Background" Value="Transparent" />
        </Style>
        -->
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <!-- inputs header -->
            <RowDefinition Height="Auto" />
            <!-- inputs -->
            <RowDefinition Height="Auto" />
            <!-- outputs header -->
            <RowDefinition Height="Auto"/>
            <!-- outputs -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- inputs header -->
        <TextBlock Grid.Row="0" Text="Inputs" HorizontalAlignment="Stretch" Padding="3" Background="DarkOrange" FontWeight="Bold" />
        <!-- inputs -->
        <!-- ListBox Grid.Row="1" ItemsSource="{Binding Inputs}" ItemContainerStyle="{StaticResource InputsStyle}" -->
        <ListBox Grid.Row="1" ItemsSource="{Binding Inputs}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"></StackPanel>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        <!-- outputs header -->
        <!-- outputs -->
        <TextBlock Grid.Row="2" Text="Outputs" HorizontalAlignment="Stretch" Padding="3" Background="DarkOrange" FontWeight="Bold" />
        <ListBox Grid.Row="3" ItemsSource="{Binding Outputs}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"></StackPanel>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </Grid>
</UserControl>
