<UserControl x:Class="BioNex.BumblebeePlugin.ServoStatus"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:my="clr-namespace:BioNex.BumblebeePlugin"
    Height="Auto" Width="Auto">
    
    <UserControl.Resources>
        <Style TargetType="{x:Type ToggleButton}" x:Key="PassFailNoImageToggleButtonStyle">
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="Enabled" />
                </Trigger>
                <Trigger Property="IsChecked" Value="False">
                    <Setter Property="Content" Value="Disabled" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- multiconverter for params to Servo commands -->
        <my:ServoOnOffAxisMultiConverter x:Key="ServoAxisConverter" />        
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="30" />
            <RowDefinition MaxHeight="50" />
            <RowDefinition MaxHeight="50" />
            <RowDefinition MaxHeight="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90" />
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="{Binding HasRAxisGridLength12}"/>
            <ColumnDefinition Width="{Binding HasABAxisGridLength12}"/>
            <ColumnDefinition Width="{Binding HasABAxisGridLength12}"/>
        </Grid.ColumnDefinitions>
        
        <!-- axis headers for homing, servo, disabled status-->
        <Label Grid.Row="0" Grid.Column="0" Background="LightGray"></Label>
        <Label Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Center" Background="LightGray">X</Label>
        <Label Grid.Row="0" Grid.Column="2" HorizontalContentAlignment="Center" Background="LightGray">Z</Label>
        <Label Grid.Row="0" Grid.Column="3" HorizontalContentAlignment="Center" Background="LightGray">W</Label>
        <Label Grid.Row="0" Grid.Column="4" HorizontalContentAlignment="Center" Background="LightGray">Y</Label>
        <Label Visibility="{Binding HideIfTipShuttle}" Grid.Row="0" Grid.Column="5" HorizontalContentAlignment="Center" Background="LightGray">Theta</Label>
        <Label Visibility="{Binding HideIfNotTipShuttle}" Grid.Row="0" Grid.Column="6" HorizontalContentAlignment="Center" Background="LightGray">Plenum</Label>
        <Label Visibility="{Binding HideIfNotTipShuttle}" Grid.Row="0" Grid.Column="7" HorizontalContentAlignment="Center" Background="LightGray">Bath</Label>

        <!-- home axes -->
        <Label Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Right" VerticalAlignment="Center">Re-home axes:</Label>
        <Button Grid.Row="1" Grid.Column="1" Margin="3" Command="{Binding HomeAxisCommand}" CommandParameter="X" ToolTip="{Binding HomeXAxisToolTip}" ToolTipService.ShowOnDisabled="True">
            <Button.Content>
                <Image Source="Images\home.png" Height="16" />
            </Button.Content>
        </Button>
        <Button Grid.Row="1" Grid.Column="2" Margin="3" Command="{Binding HomeAxisCommand}" CommandParameter="Z">
            <Button.Content>
                <Image Source="Images\home.png" Height="16" />
            </Button.Content>
        </Button>
        <Button Grid.Row="1" Grid.Column="3" Margin="3" Command="{Binding HomeAxisCommand}" CommandParameter="W">
            <Button.Content>
                <Image Source="Images\home.png" Height="16" />
            </Button.Content>
        </Button>
        <Button Grid.Row="1" Grid.Column="4" Margin="3" Command="{Binding HomeAxisCommand}" CommandParameter="Y">
            <Button.Content>
                <Image Source="Images\home.png" Height="16" />
            </Button.Content>
        </Button>
        <Button Visibility="{Binding HideIfTipShuttle}" Grid.Row="1" Grid.Column="5" Margin="3" Command="{Binding HomeAxisCommand}" CommandParameter="R">
            <Button.Content>
                <Image Source="Images\home.png" Height="16" />
            </Button.Content>
        </Button>
        <Button Visibility="{Binding HideIfNotTipShuttle}" Grid.Row="1" Grid.Column="6" Margin="3" Command="{Binding HomeAxisCommand}" CommandParameter="A">
            <Button.Content>
                <Image Source="Images\home.png" Height="16" />
            </Button.Content>
        </Button>
        <Button Visibility="{Binding HideIfNotTipShuttle}" Grid.Row="1" Grid.Column="7" Margin="3" Command="{Binding HomeAxisCommand}" CommandParameter="B">
            <Button.Content>
                <Image Source="Images\home.png" Height="16" />
            </Button.Content>
        </Button>

        <!-- homed status -->
        <Label Grid.Row="2" Grid.Column="0" HorizontalContentAlignment="Right" VerticalAlignment="Center">Home Status:</Label>
        <Image Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" Width="20">
            <Image.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AxisHomeStatus.X}" Value="true">
                            <Setter Property="Image.Source" Value="Images/success.png" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding AxisHomeStatus.X}" Value="false">
                            <Setter Property="Image.Source" Value="Images/fail.png" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Image Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center" Width="20">
            <Image.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AxisHomeStatus.Z}" Value="true">
                            <Setter Property="Image.Source" Value="Images/success.png" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding AxisHomeStatus.Z}" Value="false">
                            <Setter Property="Image.Source" Value="Images/fail.png" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Image Grid.Row="2" Grid.Column="3" HorizontalAlignment="Center" Width="20">
            <Image.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AxisHomeStatus.W}" Value="true">
                            <Setter Property="Image.Source" Value="Images/success.png" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding AxisHomeStatus.W}" Value="false">
                            <Setter Property="Image.Source" Value="Images/fail.png" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Image Grid.Row="2" Grid.Column="4" HorizontalAlignment="Center" Width="20">
            <Image.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AxisHomeStatus.Y}" Value="true">
                            <Setter Property="Image.Source" Value="Images/success.png" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding AxisHomeStatus.Y}" Value="false">
                            <Setter Property="Image.Source" Value="Images/fail.png" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Image Visibility="{Binding HideIfTipShuttle}" Grid.Row="2" Grid.Column="5" HorizontalAlignment="Center" Width="20">
            <Image.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AxisHomeStatus.R}" Value="true">
                            <Setter Property="Image.Source" Value="Images/success.png" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding AxisHomeStatus.R}" Value="false">
                            <Setter Property="Image.Source" Value="Images/fail.png" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Image Visibility="{Binding HideIfNotTipShuttle}" Grid.Row="2" Grid.Column="6" HorizontalAlignment="Center" Width="20">
            <Image.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AxisHomeStatus.A}" Value="true">
                            <Setter Property="Image.Source" Value="Images/success.png" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding AxisHomeStatus.A}" Value="false">
                            <Setter Property="Image.Source" Value="Images/fail.png" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Image Visibility="{Binding HideIfNotTipShuttle}" Grid.Row="2" Grid.Column="7" HorizontalAlignment="Center" Width="20">
            <Image.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AxisHomeStatus.B}" Value="true">
                            <Setter Property="Image.Source" Value="Images/success.png" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding AxisHomeStatus.B}" Value="false">
                            <Setter Property="Image.Source" Value="Images/fail.png" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        
        <!-- servo enable -->
        <Label Grid.Row="3" Grid.Column="0" HorizontalContentAlignment="Right" VerticalAlignment="Center">Servo Enable:</Label>
        <ToggleButton Grid.Row="3" Grid.Column="1" Tag="X" Command="{Binding ServoAxisCommand}" IsChecked="{Binding ServoOnStatus.X}" Style="{StaticResource PassFailNoImageToggleButtonStyle}" HorizontalContentAlignment="Center" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Margin="5">
            <ToggleButton.CommandParameter>
                <MultiBinding Converter="{StaticResource ServoAxisConverter}">
                    <MultiBinding.Bindings>
                        <Binding Path="IsChecked" RelativeSource="{RelativeSource Mode=Self}" />
                        <Binding Path="Tag" RelativeSource="{RelativeSource Mode=Self}" />
                    </MultiBinding.Bindings>
                </MultiBinding>
            </ToggleButton.CommandParameter>
        </ToggleButton>
        <ToggleButton Grid.Row="3" Grid.Column="2" Tag="Z" Command="{Binding ServoAxisCommand}" IsChecked="{Binding ServoOnStatus.Z}" Style="{StaticResource PassFailNoImageToggleButtonStyle}" HorizontalContentAlignment="Center" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Margin="5">
            <ToggleButton.CommandParameter>
                <MultiBinding Converter="{StaticResource ServoAxisConverter}">
                    <MultiBinding.Bindings>
                        <Binding Path="IsChecked" RelativeSource="{RelativeSource Mode=Self}" />
                        <Binding Path="Tag" RelativeSource="{RelativeSource Mode=Self}" />
                    </MultiBinding.Bindings>
                </MultiBinding>
            </ToggleButton.CommandParameter>
        </ToggleButton>
        <ToggleButton Grid.Row="3" Grid.Column="3" Tag="W" Command="{Binding ServoAxisCommand}" IsChecked="{Binding ServoOnStatus.W}" Style="{StaticResource PassFailNoImageToggleButtonStyle}" HorizontalContentAlignment="Center" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Margin="5">
            <ToggleButton.CommandParameter>
                <MultiBinding Converter="{StaticResource ServoAxisConverter}">
                    <MultiBinding.Bindings>
                        <Binding Path="IsChecked" RelativeSource="{RelativeSource Mode=Self}" />
                        <Binding Path="Tag" RelativeSource="{RelativeSource Mode=Self}" />
                    </MultiBinding.Bindings>
                </MultiBinding>
            </ToggleButton.CommandParameter>
        </ToggleButton>
        <ToggleButton Grid.Row="3" Grid.Column="4" Tag="Y" Command="{Binding ServoAxisCommand}" IsChecked="{Binding ServoOnStatus.Y}" Style="{StaticResource PassFailNoImageToggleButtonStyle}" HorizontalContentAlignment="Center" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Margin="5">
            <ToggleButton.CommandParameter>
                <MultiBinding Converter="{StaticResource ServoAxisConverter}">
                    <MultiBinding.Bindings>
                        <Binding Path="IsChecked" RelativeSource="{RelativeSource Mode=Self}" />
                        <Binding Path="Tag" RelativeSource="{RelativeSource Mode=Self}" />
                    </MultiBinding.Bindings>
                </MultiBinding>
            </ToggleButton.CommandParameter>
        </ToggleButton>
        <ToggleButton Visibility="{Binding HideIfTipShuttle}" Grid.Row="3" Grid.Column="5" Tag="R" Command="{Binding ServoAxisCommand}" IsChecked="{Binding ServoOnStatus.R}" Style="{StaticResource PassFailNoImageToggleButtonStyle}" HorizontalContentAlignment="Center" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Margin="5">
            <ToggleButton.CommandParameter>
                <MultiBinding Converter="{StaticResource ServoAxisConverter}">
                    <MultiBinding.Bindings>
                        <Binding Path="IsChecked" RelativeSource="{RelativeSource Mode=Self}" />
                        <Binding Path="Tag" RelativeSource="{RelativeSource Mode=Self}" />
                    </MultiBinding.Bindings>
                </MultiBinding>
            </ToggleButton.CommandParameter>
        </ToggleButton>
        <ToggleButton Visibility="{Binding HideIfNotTipShuttle}" Grid.Row="3" Grid.Column="6" Tag="A" Command="{Binding ServoAxisCommand}" IsChecked="{Binding ServoOnStatus.A}" Style="{StaticResource PassFailNoImageToggleButtonStyle}" HorizontalContentAlignment="Center" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Margin="5">
            <ToggleButton.CommandParameter>
                <MultiBinding Converter="{StaticResource ServoAxisConverter}">
                    <MultiBinding.Bindings>
                        <Binding Path="IsChecked" RelativeSource="{RelativeSource Mode=Self}" />
                        <Binding Path="Tag" RelativeSource="{RelativeSource Mode=Self}" />
                    </MultiBinding.Bindings>
                </MultiBinding>
            </ToggleButton.CommandParameter>
        </ToggleButton>
        <ToggleButton Visibility="{Binding HideIfNotTipShuttle}" Grid.Row="3" Grid.Column="7" Tag="B" Command="{Binding ServoAxisCommand}" IsChecked="{Binding ServoOnStatus.B}" Style="{StaticResource PassFailNoImageToggleButtonStyle}" HorizontalContentAlignment="Center" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Margin="5">
            <ToggleButton.CommandParameter>
                <MultiBinding Converter="{StaticResource ServoAxisConverter}">
                    <MultiBinding.Bindings>
                        <Binding Path="IsChecked" RelativeSource="{RelativeSource Mode=Self}" />
                        <Binding Path="Tag" RelativeSource="{RelativeSource Mode=Self}" />
                    </MultiBinding.Bindings>
                </MultiBinding>
            </ToggleButton.CommandParameter>
        </ToggleButton>

    </Grid>
</UserControl>

    