<Window x:Class="BPS140TestApplication.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BPS140 Test Application" Height="103" Width="215">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Margin="5" Command="{Binding ConnectCommand}">Connect</Button>
        <Button Grid.Row="1" Margin="5" Command="{Binding ShowDiagnosticsCommand}">Show Diagnostics</Button>
    </Grid>
</Window>
