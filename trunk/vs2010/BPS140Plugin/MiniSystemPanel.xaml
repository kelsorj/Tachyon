<UserControl x:Class="BioNex.BPS140Plugin.MiniSystemPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:led="clr-namespace:BioNex.Shared.BioNexGuiControls;assembly=BioNexGuiControls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto" MinWidth="142">
    <GroupBox>
        <GroupBox.Header>
            <TextBlock Text="{Binding HeaderName}"></TextBlock>
        </GroupBox.Header>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" CornerRadius="10" Background="{Binding LockedColor}" BorderThickness="5" BorderBrush="DarkGray" Margin="5"/>
            <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Padding="15">Unlocked</TextBlock>
            <Border Grid.Row="1" CornerRadius="10" Background="{Binding Side1Color}" BorderThickness="5" BorderBrush="DarkGray" Margin="5"/>
            <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Padding="15">At Side 1</TextBlock>
            <Border Grid.Row="2" CornerRadius="10" Background="{Binding Side2Color}" BorderThickness="5" BorderBrush="DarkGray" Margin="5"/>
            <TextBlock Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Padding="15">At Side 2</TextBlock>
        </Grid>
    </GroupBox>
</UserControl>
