<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:ps="clr-namespace:Microsoft.Expression.Prototyping.SketchControls;assembly=Microsoft.Expression.Prototyping.SketchControls" xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" xmlns:pb="clr-namespace:Microsoft.Expression.Prototyping.Behavior;assembly=Microsoft.Expression.Prototyping.Interactivity" xmlns:local="clr-namespace:DeviceManagerMockupScreens" x:Name="Screen_1_Name"
	x:Class="DeviceManagerMockupScreens.Screen_1"
	Width="500" Height="480">

	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="ProjectDataSources.xaml"/>
			</ResourceDictionary.MergedDictionaries>
			<Storyboard x:Key="OnLoaded1"/>
		</ResourceDictionary>
	</UserControl.Resources>
	<UserControl.Triggers>
		<EventTrigger RoutedEvent="FrameworkElement.Loaded">
			<BeginStoryboard Storyboard="{StaticResource OnLoaded1}"/>
		</EventTrigger>
	</UserControl.Triggers>

	<Grid x:Name="LayoutRoot" Background="White">
		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup x:Name="_SketchFlowAnimation_SketchFlowAnimation" d:IsSketchFlowAnimation="True">
				<VisualStateGroup.Transitions>
					<VisualTransition GeneratedDuration="00:00:00.5000000" To="SketchFlowAnimationFrame"/>
					<VisualTransition From="holdtimes" GeneratedDuration="00:00:01" To="SketchFlowAnimationFrame"/>
				</VisualStateGroup.Transitions>
				<VisualState x:Name="holdtimes"/>
				<VisualState x:Name="SketchFlowAnimationFrame"/>
				<VisualState x:Name="_SketchFlowAnimation_base">
					<Storyboard/>
				</VisualState>
			</VisualStateGroup>
			<VisualStateGroup x:Name="create_device">
				<VisualStateGroup.Transitions>
					<VisualTransition GeneratedDuration="00:00:00.5000000"/>
				</VisualStateGroup.Transitions>
				<VisualState x:Name="_default"/>
				<VisualState x:Name="create_device1">
					<Storyboard>
						<DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="screen_2" Storyboard.TargetProperty="(UIElement.Opacity)">
							<SplineDoubleKeyFrame KeyTime="00:00:00" Value="1"/>
						</DoubleAnimationUsingKeyFrames>
					</Storyboard>
				</VisualState>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>
		<TextBlock HorizontalAlignment="Left" Margin="8,8,0,0" Style="{DynamicResource BasicTextBlock-Sketch}" VerticalAlignment="Top" Width="103" Height="19" Text="Available Devices"/>
		<TabControl Margin="8,27,0,121" Style="{DynamicResource TabControl-Sketch}" TabStripPlacement="Bottom" HorizontalAlignment="Left" Width="193" FontSize="13.333">
			<TabItem Margin="0" Header="All">
				<Grid/>
			</TabItem>
			<TabItem Header="Robots">
				<Grid/>
			</TabItem>
			<TabItem Header="Robot Storage">
				<Grid/>
			</TabItem>
		</TabControl>
		<Button HorizontalAlignment="Left" Margin="8,0,0,87" Style="{DynamicResource Button-Sketch}" VerticalAlignment="Bottom" Width="193" Height="30" Content="Create New Device" ToolTip="Creates a new device that will be loaded whenever the application is launched (Keyboard shortcut: Ins)">
			<i:Interaction.Triggers>
				<i:EventTrigger EventName="Click">
					<pb:ActivateStateAction TargetScreen="DeviceManagerMockupScreens.Screen_1" TargetState="create_device1"/>
				</i:EventTrigger>
			</i:Interaction.Triggers>
		</Button>
		<Button HorizontalAlignment="Left" Margin="8,0,0,19" Style="{DynamicResource Button-Sketch}" VerticalAlignment="Bottom" Width="193" Height="30" Content="Delete Device" ToolTip="Deletes the selected device(s) (Keyboard shortcut: Del)"/>
		<Button HorizontalAlignment="Left" Margin="8,0,0,53" Style="{DynamicResource Button-Sketch}" VerticalAlignment="Bottom" Width="193" Height="30" Content="Rename Device" ToolTip="Renames the selected device (Keyboard shortcut: F2)"/>
		<TextBlock HorizontalAlignment="Left" Margin="205,8,0,0" Style="{DynamicResource BasicTextBlock-Sketch}" VerticalAlignment="Top" Width="103" Height="19"><Run Text="Device Properties"/></TextBlock>
		<ps:SketchRectangleUC Margin="205,27,8,19" Style="{DynamicResource Rectangle-Sketch}"/>
		<local:Screen_2 x:Name="screen_2" Margin="100,127,110,121" d:IsPrototypingComposition="True" Opacity="0"/>
	</Grid>
</UserControl>