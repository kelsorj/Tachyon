<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:ps="clr-namespace:Microsoft.Expression.Prototyping.SketchControls;assembly=Microsoft.Expression.Prototyping.SketchControls" xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" xmlns:pb="clr-namespace:Microsoft.Expression.Prototyping.Behavior;assembly=Microsoft.Expression.Prototyping.Interactivity" x:Name="Screen_2_Name"
	x:Class="DeviceManagerMockupScreens.Screen_2"
	Width="290" Height="232">
	<UserControl.Resources>
		<Storyboard x:Key="OnClick1">
			<DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="{x:Null}" Storyboard.TargetProperty="(UIElement.Opacity)">
				<SplineDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
			</DoubleAnimationUsingKeyFrames>
		</Storyboard>
	</UserControl.Resources>
	<UserControl.Triggers>
		<EventTrigger RoutedEvent="ButtonBase.Click" SourceName="button">
			<BeginStoryboard Storyboard="{StaticResource OnClick1}"/>
		</EventTrigger>
	</UserControl.Triggers>

	<Grid x:Name="LayoutRoot" Background="White">
		<TextBlock Margin="8,8,126,0" Style="{DynamicResource BasicTextBlock-Sketch}" VerticalAlignment="Top" Height="20" Text="Create a New Device"/>
		<ps:SketchRectangleUC Margin="8,32,0,0" Style="{DynamicResource Rectangle-Sketch}" VerticalAlignment="Top" Height="192" HorizontalAlignment="Left" Width="275"/>
		<TextBlock HorizontalAlignment="Left" Margin="18,44,0,0" Style="{DynamicResource BasicTextBlock-Sketch}" VerticalAlignment="Top" Width="253" Height="20" Text="What type of device do you want to create?"/>
		<ComboBox HorizontalAlignment="Left" Margin="18,68,0,0" Style="{DynamicResource ComboBox-Sketch}" Width="253" VerticalAlignment="Top" Height="26" SelectedIndex="0">
			<ComboBoxItem Content="Speedy Robot"/>
			<ComboBoxItem Content="Bumblebee"/>
			<ComboBoxItem Content="Hive"/>
		</ComboBox>
		<Button x:Name="button" HorizontalAlignment="Left" Margin="77,184,0,0" Style="{DynamicResource Button-Sketch}" VerticalAlignment="Top" Width="114" Height="24" Content="Create Device">
			<i:Interaction.Triggers>
				<i:EventTrigger EventName="Click">
					<pb:NavigateToScreenAction TargetScreen="DeviceManagerMockupScreens.Copy_of_Device_Manager"/>
				</i:EventTrigger>
			</i:Interaction.Triggers>
		</Button>
		<Button HorizontalAlignment="Left" Margin="195,184,0,0" Style="{DynamicResource Button-Sketch}" VerticalAlignment="Top" Width="76" Height="24" Content="Cancel"/>
		<TextBlock Margin="18,104,19,103" Style="{DynamicResource BasicTextBlock-Sketch}" Text="What do you want to call it?"/>
		<TextBox Margin="19,0,18,78" Style="{DynamicResource BasicTextBox-Sketch}" VerticalAlignment="Bottom" Height="26" Text="Gimpy" TextWrapping="Wrap"/>
	</Grid>
</UserControl>