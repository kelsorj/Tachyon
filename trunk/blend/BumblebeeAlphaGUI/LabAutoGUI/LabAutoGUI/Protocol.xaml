<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="LabAutoGUI.Protocol"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480"
	MinWidth="500">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30"></RowDefinition>
			<RowDefinition Height="30"></RowDefinition>
			<RowDefinition Height="30"></RowDefinition>
			<RowDefinition Height="30"></RowDefinition>
			<RowDefinition Height="30"></RowDefinition>
			<RowDefinition Height="30"></RowDefinition>
			<RowDefinition Height="30"></RowDefinition>
			<RowDefinition Height="30"></RowDefinition>
		</Grid.RowDefinitions>
		
		<Label Grid.Row="0" Style="{DynamicResource HeaderLabel}">Hitpick File Selection</Label>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition></ColumnDefinition>
				<ColumnDefinition Width="40"></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<Label Grid.Column="0" HorizontalContentAlignment="Left" Foreground="White">Filename:</Label>
			<TextBox Grid.Column="1" Text="{Binding HitpickFilepath}" Margin="3"></TextBox>
			<Button Grid.Column="2" Margin="3" Click="button_hitpick_file_Click">...</Button>
		</Grid>
		<Label Grid.Row="2" Style="{DynamicResource HeaderLabel}">Tip Scheduler Selection</Label>
		<ComboBox Grid.Row="3" ItemsSource="{Binding SchedulerPluginNames}" Text="{Binding SelectedSchedulerPlugin, Mode=OneWayToSource}" SelectedIndex="0" Margin="3"></ComboBox>
		<Label Grid.Row="4" Style="{DynamicResource HeaderLabel}">Plate Handling Device Selection</Label>
		<ComboBox Grid.Row="5" ItemsSource="{Binding DevicePluginNames}" Text="{Binding SelectedDevicePlugin, Mode=OneWayToSource}" SelectedIndex="0" Margin="3"></ComboBox>
		<Label Grid.Row="6" Style="{DynamicResource HeaderLabel}">Start Process</Label>
		<Button Grid.Row="7" Command="{Binding StartCommand}" Margin="3">Start</Button>
	</Grid>
</UserControl>