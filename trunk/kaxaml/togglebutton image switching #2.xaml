<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <Page.Resources>
    <Image x:Key="On" Source="C:\Code\trunk\vs2008\HivePrototypePlugin\Images\success.png" />
    <Image x:Key="Off" Source="C:\Code\trunk\vs2008\HivePrototypePlugin\Images\fail.png" />
  
    <Style x:Key="OnOffToggleImageStyle" TargetType="ToggleButton">
      <Style.Triggers>
        <Trigger Property="IsChecked" Value="True">
          <Setter Property="Content" Value="{DynamicResource On}" />
        </Trigger>
        <Trigger Property="IsChecked" Value="False">
          <Setter Property="Content" Value="{DynamicResource Off}" />
        </Trigger>
      </Style.Triggers>
    </Style>
  
    <StackPanel x:Key="OnPanel" Orientation="Horizontal">
      <Image Source="C:\Code\trunk\vs2008\HivePrototypePlugin\Images\success.png" Width="48" Height="48" />
      <Label HorizontalContentAlignment="Center">Telemetry On</Label>
    </StackPanel>
    <StackPanel x:Key="OffPanel" Orientation="Horizontal">
      <Image Source="C:\Code\trunk\vs2008\HivePrototypePlugin\Images\fail.png" Width="48" Height="48" />
      <Label HorizontalContentAlignment="Center">Telemetry Off</Label>
    </StackPanel>
  </Page.Resources>
  
  <Grid>
    <ToggleButton Width="129" Height="64" Style="{StaticResource OnOffToggleImageStyle}">
    </ToggleButton>
  </Grid>
</Page>